<api-module name="im-chat">

	<resource name="im-chat">
	<variable name="imChatId">

		<resource name="conversation-start">
			<post-action name="conversationStart"/>
		</resource>

		<resource name="customer">
			<get-action name="customer"/>
		</resource>

		<resource name="customer-create">
			<post-action name="customerCreate"/>
		</resource>

		<resource name="message-send">
			<post-action name="messageSend"/>
		</resource>

		<resource name="price-point-list">
			<get-action name="pricePointList"/>
		</resource>

		<resource name="profile-list">
			<get-action name="profileList"/>
		</resource>

		<resource name="purchase-start">
			<post-action name="purchaseStart"/>
		</resource>

		<resource name="purchase-get-confirmation">
			<post-action name="purchaseGetConfirmation"/>
		</resource>

		<resource name="purchase-confirm">
			<post-action name="purchaseConfirm"/>
		</resource>

		<resource name="purchase-history">
			<post-action name="purchaseHistory"/>
		</resource>

		<resource name="session-start">
			<post-action name="sessionStart"/>
		</resource>

		<resource name="session-load">
			<post-action name="sessionLoad"/>
		</resource>

		<resource name="session-end">
			<post-action name="sessionEnd"/>
		</resource>

		<resource name="message-list">
			<post-action name="messageList"/>
		</resource>

		<resource name="forgot-password">
			<post-action name="forgotPassword"/>
		</resource>

		<resource name="change-password">
			<post-action name="changePassword"/>
		</resource>

		<resource name="message-template-set">
			<post-action name="messageTemplateSetGet"/>
		</resource>

	</variable>
	</resource>

	<resource name="im-chat-media">
	<variable name="mediaId">
	<variable name="mediaContentHash">

		<resource name="original.jpg">
			<get-action name="mediaOriginalJpeg"/>
		</resource>

		<resource name="thumbnail.jpg">
			<get-action name="mediaThumbnailJpeg"/>
		</resource>

	</variable>
	</variable>
	</resource>

</api-module>
