<model-meta
	name="imChatCustomerCredit"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="imChatCustomer"
			cacheable="yes"/>

		<index-field
			cacheable="yes"/>

		<timestamp-field
			name="timestamp"
			column-type="iso"/>

		<!-- data -->

		<reference-field
			type="user"/>

		<string-field
			name="reason"/>

		<integer-field
			name="creditAmount"/>

		<integer-field
			name="creditBalanceBefore"/>

		<integer-field
			name="creditBalanceAfter"/>

		<integer-field
			name="billAmount"/>

	</fields>

</model-meta>