<model-meta
	name="imChat"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="slice"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<reference-field
			type="currency"
			nullable="yes"/>

		<reference-field
			type="messageTemplateDatabase"
			nullable="yes"/>

		<integer-field
			name="preferredQueueTime"
			default="0"/>

		<reference-field
			type="paypalAccount"
			nullable="yes"/>

		<integer-field
			name="messageCost"
			nullable="yes"/>

		<integer-field
			name="freeMessageLimit"
			nullable="yes"/>

		<integer-field
			name="billMessageMinChars"
			nullable="yes"/>

		<integer-field
			name="billMessageMaxChars"
			nullable="yes"/>

		<integer-field
			name="freeMessageMinChars"
			nullable="yes"/>

		<integer-field
			name="freeMessageMaxChars"
			nullable="yes"/>

		<yes-no-field
			name="developmentMode"
			default="no"/>

	</fields>

	<collections>

		<children-collection
			name="templates"
			type="imChatTemplate"
			order-sql="code"
			where-sql="not deleted"/>

		<children-collection
			name="customerDetailTypes"
			type="imChatCustomerDetailType"
			order-sql="ordering, code"
			where-sql="not deleted"/>

	</collections>

	<priv-types>

		<priv-type
			name="Manage"
			description="Full control of an IM chat"
			template="yes"/>

		<priv-type
			name="Supervisor"
			description="View supervisor reports for an IM chat"
			template="yes"/>

	</priv-types>

	<queue-types>

		<queue-type
			name="Reply"
			description="New messages to reply to for an IM chat service"
			subject="imChatConversation"
			ref="imChatMessage"/>

	</queue-types>

</model-meta>
