<model-meta
	name="imChatMessage"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="imChatConversation"/>

		<index-field
			counter="numMessages"/>

		<!-- state -->

		<reference-field
			type="queueItem"
			nullable="yes"/>

		<!-- data -->

		<string-field
			name="messageText"/>

		<reference-field
			name="senderUser"
			type="user"
			nullable="yes"/>

		<timestamp-field
			name="timestamp"
			column-type="iso"/>

		<integer-field
			name="price"
			nullable="yes"/>

		<reference-field
			type="imChatTemplate"
			nullable="yes"/>

		<reference-field
			name="partnerImChatMessage"
			type="imChatMessage"
			nullable="yes"/>

	</fields>

</model-meta>