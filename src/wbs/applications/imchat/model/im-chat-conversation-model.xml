<model-meta
	name="imChatConversation"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="imChatCustomer"/>

		<index-field
			counter="numConversations"/>

		<!-- state -->

		<yes-no-field
			name="pendingReply"/>

		<!-- timings -->

		<timestamp-field
			name="startTime"
			column-type="iso"/>

		<timestamp-field
			name="endTime"
			column-type="iso"
			nullable="yes"/>

		<!-- relations -->

		<reference-field
			type="imChatProfile"/>

		<!-- statistics -->

		<integer-field
			name="numMessages"
			default="0"/>

		<integer-field
			name="freeMessages"
			default="0"/>

	</fields>

	<collections>

		<children-list
			name="messages"
			type="imChatMessage"/>

		<children-collection
			name="messagesIn"
			type="imChatMessage"
			order-sql="index"
			where-sql="sender_user_id is null"/>

	</collections>

</model-meta>