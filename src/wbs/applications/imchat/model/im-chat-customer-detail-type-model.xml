<model-meta
	name="imChatCustomerDetailType"
	type="minor">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="imChat"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<string-field
			name="label"/>

		<string-field
			name="help"/>

		<yes-no-field
			name="required"/>

		<yes-no-field
			name="restricted"/>

		<yes-no-field
			name="whenCreatingAccount"/>

		<enum-field
			name="dataType"
			type="imChatCustomerDetailDataType"/>

		<integer-field
			name="minimumAge"
			nullable="yes"/>

		<integer-field
			name="ordering"/>

	</fields>

</model-meta>