<model-meta
	name="imChatPurchase"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="imChatCustomer"
			cacheable="yes"/>

		<index-field
			cacheable="yes"/>

		<!-- state -->

		<enum-field
			name="state"
			type="imChatPurchaseState"/>

		<!-- data -->

		<reference-field
			type="imChatSession"/>

		<reference-field
			type="imChatPricePoint"/>

		<integer-field
			name="price"/>

		<integer-field
			name="value"/>

		<timestamp-field
			name="createdTime"
			column-type="iso"/>

		<timestamp-field
			name="completedTime"
			column-type="iso"
			nullable="yes"/>

		<timestamp-field
			name="cancelledTime"
			column-type="iso"
			nullable="yes"/>

		<reference-field
			type="paypalPayment"
			nullable="yes"/>

		<string-field
			name="token"
			nullable="yes"/>

		<yes-no-field
			name="developerMode"
			default="no"/>

	</fields>

</model-meta>