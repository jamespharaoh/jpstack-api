<console-module
	name="im-chat-pending">

	<object-context
		name="imChat.pending"
		bean-name="imChatPending"
		object-name="imChatMessage">

		<object>

			<context-tab-responder-page
				name="summary"/>

			<context-action-page
				name="form"/>

		</object>

	</object-context>

	<field-set
		name="customerFields"
		object-name="imChatCustomer">

		<code-field/>

		<integer-field
			name="numConversations"/>

		<currency-field
			name="balance"
			currency="imChat.currency"/>

	</field-set>

	<field-set
		name="messageFields"
		object-name="imChatMessage">

		<object-field
			name="senderUser"
			label="User"
			object-type="user"/>

		<text-field
			name="messageText"
			label="Message"/>

		<timestamp-field
			name="timestamp"/>

		<currency-field
			name="price"
			currency="imChatConversation.imChatCustomer.imChat.currency"/>

	</field-set>

</console-module>
