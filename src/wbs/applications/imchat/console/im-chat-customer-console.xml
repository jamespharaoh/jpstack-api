<console-module
	name="im-chat-customer">

	<console-helper-provider
		object-name="imChatCustomer"
		view-priv="imChat:supervisor">

		<context-stuff
			name="imChatCustomerName"
			field="code"/>

		<context-stuff
			name="imChatId"
			delegate="imChat"
			field="id"/>

		<run-post-processor
			name="imChat"/>

		<priv-key
			name="imChatCustomer.manage"
			delegate="imChat"
			priv="manage"/>

		<priv-key
			name="imChatCustomer.supervisor"
			delegate="imChat"
			priv="supervisor"/>

	</console-helper-provider>

	<object-context
		name="imChatCustomer"
		object-name="imChatCustomer">

		<list>

			<object-search-page
				search-fields="search"
				results-fields="results"
				priv-key="imChat.manage"
				parent-id-key="imChatId"
				parent-id-name="imChatId"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<section
				name="settings"
				label="Settings">

				<object-settings-page
					fields="settings"
					short-name="general"/>

				<context-tab-action-page
					name="password"
					priv-key="imChatCustomer.supervisor"/>

			</section>

			<context-tab-action-page
				name="credit"
				priv-key="imChatCustomer.supervisor"/>

			<context-link
				name="conversation"
				link="imChatConversation"
				label="Conversations"
				priv-key="imChatCustomer.supervisor"/>

			<context-link
				name="session"
				link="imChatSession"
				label="Sessions"
				priv-key="imChatSession.supervisor"/>

			<context-link
				name="purchase"
				link="imChatPurchase"
				label="Purchases"
				priv-key="imChatPurchase.supervisor"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="search"
		class="wbs.applications.imchat.model.ImChatCustomerSearch">

		<text-field
			name="code"
			nullable="yes"/>

		<text-field
			name="email"
			nullable="yes"/>

		<interval-field
			name="firstSession"
			nullable="yes"/>

		<interval-field
			name="lastSession"
			nullable="yes"/>

		<enum-field
			name="order"/>

	</field-set>

	<field-set
		name="results"
		object-name="imChatCustomer">

		<code-field/>

		<text-field
			name="email"/>

		<integer-field
			name="numConversations"
			label="Convs"/>

		<integer-field
			name="numPurchases"
			label="Purchs"/>

		<currency-field
			name="balance"
			currency="imChat.creditCurrency"/>

		<currency-field
			name="totalSpend"
			label="Spend"
			currency="imChat.creditCurrency"/>

		<currency-field
			name="totalPurchasePrice"
			label="Purchase"
			currency="imChat.billingCurrency"/>

		<timestamp-field
			name="lastSession"/>

	</field-set>

	<field-set
		name="summary"
		object-name="imChatCustomer">

		<id-field/>
		<parent-field/>
		<code-field/>

		<text-field
			name="email"
			view-priv="imChat:supervisor"/>

		<integer-field
			name="numConversations"/>

		<integer-field
			name="numPurchases"/>

		<currency-field
			name="balance"
			currency="imChat.creditCurrency"/>

		<text-area-field
			name="notesText"
			label="Notes"/>

		<yes-no-field
			name="developerMode"/>

	</field-set>

	<field-set
		name="settings"
		object-name="imChatCustomer">

		<text-area-field
			name="notesText"
			label="Notes"/>

		<yes-no-field
			name="developerMode"/>

	</field-set>

	<field-set
		name="credit-summary"
		object-name="imChatCustomer">

		<code-field/>

		<integer-field
			name="numConversations"/>

		<integer-field
			name="numPurchases"/>

		<integer-field
			name="numCredits"/>

		<currency-field
			name="balance"
			currency="imChat.creditCurrency"/>

	</field-set>

	<field-set
		name="credit-request"
		class="wbs.applications.imchat.console.ImChatCustomerCreditRequest">

		<text-field
			name="reason"/>

		<currency-field
			name="creditAmount"
			currency="customer.imChat.creditCurrency"/>

		<currency-field
			name="billAmount"
			currency="customer.imChat.billingCurrency"/>

	</field-set>

	<field-set
		name="credit-history"
		object-name="imChatCustomerCredit">

		<timestamp-field
			name="timestamp"/>

		<object-field
			name="user"
			object-type="user"/>

		<text-field
			name="reason"/>

		<currency-field
			name="creditAmount"
			label="Credit"
			currency="imChatCustomer.imChat.creditCurrency"/>

		<currency-field
			name="creditBalanceAfter"
			label="Balance"
			currency="imChatCustomer.imChat.creditCurrency"/>

		<currency-field
			name="billAmount"
			label="Bill"
			currency="imChatCustomer.imChat.billingCurrency"/>

	</field-set>

</console-module>