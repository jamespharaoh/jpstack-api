<console-module
	name="im-chat-purchase">

	<console-helper-provider
		object-name="imChatPurchase"
		view-priv="grandparent:manage">

		<priv-key
			name="imChatPurchase.manage"
			delegate="imChatCustomer.imChat"
			priv="manage"/>

		<context-stuff
			name="imChatPurchaseName"
			field="index"/>

		<context-stuff
			name="imChatCustomerId"
			delegate="imChatCustomer"
			field="id"/>

		<run-post-processor
			name="imChatCustomer"/>

	</console-helper-provider>

	<object-context
		name="imChatPurchase"
		object-name="imChatPurchase">

		<list>

			<object-list-page
				fields="list"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="imChatPurchase">

		<index-field/>

		<object-field
			name="imChatPricePoint"
			label="Price point"
			object-type="imChatPricePoint"/>

		<timestamp-field
			name="createdTime"
			label="Created"/>

	</field-set>

	<field-set
		name="summary"
		object-name="imChatPurchase">

		<id-field/>
		<parent-field/>
		<index-field/>

		<object-field
			name="imChatPricePoint"
			object-type="imChatPricePoint"/>

		<currency-field
			name="price"
			currency="imChatCustomer.imChat.currency"/>

		<currency-field
			name="value"
			currency="imChatCustomer.imChat.currency"/>

		<timestamp-field
			name="createdTime"/>

		<timestamp-field
			name="completedTime"/>

		<timestamp-field
			name="cancelledTime"/>

		<object-field
			name="paypalPayment"
			object-type="paypalPayment"/>

	</field-set>

</console-module>
