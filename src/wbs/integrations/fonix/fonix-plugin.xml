<plugin
	name="fonix"
	package="wbs.integrations.fonix">

	<plugin-dependencies>
		<plugin-dependency name="integrations-common"/>
		<plugin-dependency name="network"/>
		<plugin-dependency name="platform-scaffold"/>
	</plugin-dependencies>

	<models>
		<enum-type name="fonixInboundLogType"/>
		<model name="fonixConfig"/>
		<model name="fonixDeliveryStatus"/>
		<model name="fonixInboundLog"/>
		<model name="fonixNetwork"/>
		<model name="fonixRouteIn"/>
		<model name="fonixRouteOut"/>
	</models>

	<layer name="api">
		<component class="api.FonixRouteInApiLoggingAction"/>
		<component class="api.FonixRouteReportApiLoggingAction"/>
	</layer>

	<layer name="daemon">
		<component class="daemon.FonixSmsSenderHelper"/>
		<component class="daemon.FonixSmsSenderService"/>
	</layer>

	<layer name="logic">
		<component class="foreignapi.FonixMessageHttpSenderHelper"/>
		<component class="logic.FonixLogicImplementation"/>
	</layer>

	<fixtures>
		<fixture name="fonix"/>
	</fixtures>

	<api-modules>
		<api-module name="fonix"/>
	</api-modules>

	<console-modules>
		<console-module name="fonix"/>
		<console-module name="fonix-config"/>
		<console-module name="fonix-delivery-status"/>
		<console-module name="fonix-inbound-log"/>
		<console-module name="fonix-network"/>
		<console-module name="fonix-route-in"/>
		<console-module name="fonix-route-out"/>
	</console-modules>

</plugin>
