<console-module
	name="fonix-config">

	<console-helper-provider
		object-name="fonixConfig"
		view-priv="root:manage">

		<priv-key
			name="fonix.manage"
			priv="root:manage"/>

		<priv-key
			name="fonixConfig.manage"
			priv="root:manage"/>

		<context-stuff
			name="fonixConfigName"
			field="name"/>

	</console-helper-provider>

	<object-context
		name="fonixConfig"
		object-name="fonixConfig">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<context-link
				name="network"
				link="fonixNetwork"
				label="Networks"
				priv-key="fonix.manage"/>

			<context-link
				name="deliveryStatus"
				link="fonixDeliveryStatus"
				label="Delivery statuses"
				priv-key="fonix.manage"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="fonix-config"
			type="read-only">

			<columns>

				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="create"
			object-type="fonix-config"
			type="create">

			<columns>

				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="fonix-config"
			type="read-only">

			<columns>

				<id-field/>
				<code-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="fonix-config"
			type="update">

			<columns>

				<name-field/>
				<description-field/>

			</columns>

		</form>

	</forms>

</console-module>
