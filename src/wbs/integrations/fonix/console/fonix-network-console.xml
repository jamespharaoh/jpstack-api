<console-module
	name="fonix-network">

	<console-helper-provider
		object-name="fonixNetwork"
		view-priv="root:manage">

		<priv-key
			name="fonixNetwork.manage"
			delegate="root"
			priv="manage"/>

		<context-stuff
			name="fonixNetworkName"
			delegate="network"
			field="name"/>

		<context-stuff
			name="fonixConfigId"
			delegate="fonixConfig"
			field="id"/>

		<run-post-processor
			name="fonixConfig"/>

	</console-helper-provider>

	<object-context
		name="fonixNetwork"
		object-name="fonixNetwork">

		<list>

			<object-list-page
				fields="list"/>

			<object-create-page
				fields="create"
				create-priv-delegate="root"
				create-priv-code="manage"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="fonixNetwork">

		<object-field
			name="network"
			object-type="network"/>

		<text-field
			name="theirCode"/>

	</field-set>

	<field-set
		name="create"
		object-name="fonixNetwork">

		<object-field
			name="network"
			object-type="network"/>

		<text-field
			name="theirCode"/>

	</field-set>

	<field-set
		name="summary"
		object-name="fonixNetwork">

		<id-field/>
		<parent-field/>

		<object-field
			name="network"
			object-type="network"/>

		<deleted-field/>

		<text-field
			name="theirCode"/>

	</field-set>

	<field-set
		name="settings"
		object-name="fonixNetwork">

		<object-field
			name="network"
			object-type="network"/>

		<deleted-field/>

		<text-field
			name="theirCode"/>

	</field-set>

</console-module>
