<console-module
	name="fonix-network">

	<console-helper-provider
		object-name="fonixNetwork"
		view-priv="root:manage"
		create-priv="root:manage">

		<priv-key
			name="fonixNetwork.manage"
			priv="root:manage"/>

		<context-stuff
			name="fonixNetworkName"
			field="network.name"/>

		<context-stuff
			name="fonixConfigId"
			field="fonixConfig.id"/>

		<run-post-processor
			name="fonixConfig"/>

	</console-helper-provider>

	<object-context
		name="fonixNetwork"
		object-name="fonixNetwork">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="fonix-network"
			type="read-only">

			<columns>

				<object-field
					name="network"
					object-type="network"/>

				<text-field
					name="theirCode"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="fonix-network"
			type="create">

			<columns>

				<object-field
					name="network"
					object-type="network"/>

				<text-field
					name="theirCode"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="fonix-network"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>

				<object-field
					name="network"
					object-type="network"/>

				<deleted-field/>

				<text-field
					name="theirCode"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="fonix-network"
			type="update">

			<columns>

				<object-field
					name="network"
					object-type="network"/>

				<deleted-field/>

				<text-field
					name="theirCode"/>

			</columns>

		</form>

	</forms>

</console-module>
