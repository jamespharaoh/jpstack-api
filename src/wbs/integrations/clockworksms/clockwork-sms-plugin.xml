<plugin
	name="clockwork-sms"
	package="wbs.integrations.clockworksms">

	<plugin-dependencies>
		<plugin-dependency name="integrations-common"/>
		<plugin-dependency name="scaffold"/>
	</plugin-dependencies>

	<models>
		<enum-type name="clockworkSmsInboundLogType"/>
		<model name="clockworkSmsConfig"/>
		<model name="clockworkSmsInboundLog"/>
		<model name="clockworkSmsNetwork"/>
		<model name="clockworkSmsRouteIn"/>
		<model name="clockworkSmsRouteOut"/>
	</models>

	<sql-scripts>
		<sql-schema name="clockwork-sms"/>
	</sql-scripts>

	<layer name="api">
		<bean class="api.ClockworkSmsRouteInAction"/>
		<bean class="api.ClockworkSmsRouteReportAction"/>
	</layer>

	<layer name="daemon">
		<bean class="daemon.ClockworkSmsSenderHelper"/>
		<bean class="daemon.ClockworkSmsSenderService"/>
	</layer>

	<layer name="logic">
		<bean class="foreignapi.ClockworkSmsForeignApiConfig"/>
		<bean class="foreignapi.ClockworkSmsMessageSender"/>
	</layer>

	<fixtures>
		<fixture name="clockworkSms"/>
	</fixtures>

	<api-modules>
		<api-module name="clockwork-sms"/>
	</api-modules>

	<console-modules>
		<console-module name="clockwork-sms"/>
		<console-module name="clockwork-sms-config"/>
		<console-module name="clockwork-sms-network"/>
		<console-module name="clockwork-sms-route-in"/>
		<console-module name="clockwork-sms-route-out"/>
	</console-modules>

</plugin>
