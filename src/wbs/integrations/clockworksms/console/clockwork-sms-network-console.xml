<console-module
	name="clockwork-sms-network">

	<console-helper-provider
		object-name="clockworkSmsNetwork"
		view-priv="root:manage"
		create-priv="root:manage">

		<priv-key
			name="clockworkSmsNetwork.manage"
			priv="root:manage"/>

		<context-stuff
			name="clockworkSmsNetworkName"
			field="network.name"/>

		<context-stuff
			name="clockworkSmsConfigId"
			field="clockworkSmsConfig.id"/>

		<run-post-processor
			name="clockworkSmsConfig"/>

	</console-helper-provider>

	<object-context
		name="clockworkSmsNetwork"
		object-name="clockworkSmsNetwork">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="clockwork-sms-network"
			type="read-only">

			<columns>

				<object-field
					name="network"
					object-type="network"/>

				<integer-field
					name="theirId"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="clockwork-sms-network"
			type="create">

			<columns>

				<object-field
					name="network"
					object-type="network"/>

				<integer-field
					name="theirId"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="clockwork-sms-network"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>

				<object-field
					name="network"
					object-type="network"/>

				<deleted-field/>

				<integer-field
					name="theirId"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="clockwork-sms-network"
			type="update">

			<columns>

				<object-field
					name="network"
					object-type="network"/>

				<deleted-field/>

				<integer-field
					name="theirId"/>

			</columns>

		</form>

	</forms>

</console-module>
