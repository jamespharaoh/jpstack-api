<console-module
	name="clockwork-sms-config">

	<console-helper-provider
		object-name="clockworkSmsConfig"
		view-priv="root:manage">

		<priv-key
			name="clockworkSms.manage"
			priv="root:manage"/>

		<priv-key
			name="clockworkSmsConfig.manage"
			priv="root:manage"/>

		<context-stuff
			name="clockworkSmsConfigName"
			field="name"/>

	</console-helper-provider>

	<object-context
		name="clockworkSmsConfig"
		object-name="clockworkSmsConfig">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="list"/>

			<object-settings-page
				form="settings"/>

			<context-link
				name="network"
				link="clockworkSmsNetwork"
				label="Networks"
				priv-key="clockworkSms.manage"/>

			<section
				name="delivery"
				label="Delivery">

				<context-link
					name="status"
					link="clockworkSmsDeliveryStatus"
					label="Statuses"
					priv-key="clockworkSms.manage"/>

				<context-link
					name="statusDetailCode"
					link="clockworkSmsDeliveryStatusDetailCode"
					label="Status detail codes"
					priv-key="clockworkSms.manage"/>

			</section>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="clockwork-sms-config"
			type="read-only">

			<columns>

				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="create"
			object-type="clockwork-sms-config"
			type="create">

			<columns>

				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="clockwork-sms-config"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="clockwork-sms-config"
			type="update">

			<columns>

				<name-field/>
				<description-field/>

			</columns>

		</form>

	</forms>

</console-module>
