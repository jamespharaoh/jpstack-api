<console-module
	name="clockwork-sms-delivery-status">

	<console-helper-provider
		object-name="clockworkSmsDeliveryStatus"
		view-priv="root:manage"
		create-priv="root:manage">

		<priv-key
			name="clockworkSmsDeliveryStatus.manage"
			priv="root:manage"/>

		<context-stuff
			name="clockworkSmsDeliveryStatusName"
			field="code"/>

		<context-stuff
			name="clockworkSmsConfigId"
			field="clockworkSmsConfig.id"/>

		<run-post-processor
			name="clockworkSmsConfig"/>

	</console-helper-provider>

	<object-context
		name="clockworkSmsDeliveryStatus"
		object-name="clockworkSmsDeliveryStatus">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="clockwork-sms-delivery-status"
			type="read-only">

			<columns>

				<code-field/>

				<description-field/>

				<enum-field
					name="messageStatus"/>

				<text-field
					name="theirDescription"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="clockwork-sms-delivery-status"
			type="create">

			<columns>

				<code-field/>

				<description-field/>

				<enum-field
					name="messageStatus"/>

				<text-field
					name="theirDescription"/>

				<text-area-field
					name="theirCommonCauses"
					nullable="yes"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="clockwork-sms-delivery-status"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<description-field/>
				<deleted-field/>

				<enum-field
					name="messageStatus"/>

				<text-field
					name="theirDescription"/>

				<text-area-field
					name="theirCommonCauses"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="clockwork-sms-delivery-status"
			type="update">

			<columns>

				<code-field/>
				<description-field/>
				<deleted-field/>

				<enum-field
					name="messageStatus"/>

				<text-field
					name="theirDescription"/>

				<text-area-field
					name="theirCommonCauses"
					nullable="yes"/>

			</columns>

		</form>

	</forms>

</console-module>
