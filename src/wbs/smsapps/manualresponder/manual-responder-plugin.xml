<plugin
	name="manual-responder"
	package="wbs.smsapps.manualresponder">

	<plugin-dependencies>
		<plugin-dependency name="network"/>
		<plugin-dependency name="route-core"/>
		<plugin-dependency name="sms-apps-common"/>
	</plugin-dependencies>

	<sql-scripts>
		<sql-schema name="manual-responder"/>
		<sql-schema name="manual-responder-report"/>
	</sql-scripts>

	<models>
		<model name="manualResponder"/>
		<model name="manualResponderNumber"/>
		<model name="manualResponderRequest"/>
		<model name="manualResponderReply"/>
		<model name="manualResponderTemplate"/>
		<model name="manualResponderReport"/>
	</models>

	<layer name="logic">
		<bean class="logic.ManualResponderLogicImplementation"/>
	</layer>

	<layer name="console">
		<bean class="console.ManualResponderNumberConsoleHooks"/>
		<bean class="console.ManualResponderQueueConsolePlugin"/>
		<bean class="console.ManualResponderRequestPendingFormAction"/>
		<bean class="console.ManualResponderRequestPendingFormResponder"/>
		<bean class="console.ManualResponderRequestPendingNumberNoteUpdateAction"/>
		<bean class="console.ManualResponderRequestPendingSummaryPart"/>
		<bean class="console.ManualResponderSharedReportOperatorCsvResponder"/>
		<bean class="console.ManualResponderSharedReportOperatorPart"/>
		<bean class="console.ManualResponderSharedReportServiceCsvResponder"/>
		<bean class="console.ManualResponderSharedReportServicePart"/>
		<bean class="console.ManualResponderSharedReportSimpleCsvResponder"/>
		<bean class="console.ManualResponderSharedReportSimplePart"/>
		<bean class="console.ManualResponderStatusLine"/>
		<bean class="console.ManualResponderStatusLinePart"/>
	</layer>

	<layer name="daemon">
		<bean class="daemon.ManualResponderCommand"/>
		<bean class="daemon.ManualResponderDelivery"/>
	</layer>

	<fixtures>
		<fixture name="manualResponder"/>
	</fixtures>

	<console-modules>
		<console-module name="manual-responder"/>
		<console-module name="manual-responder-number"/>
		<console-module name="manual-responder-request"/>
		<console-module name="manual-responder-request-pending"/>
		<console-module name="manual-responder-shared-report" />
		<console-module name="manual-responder-template"/>
	</console-modules>

</plugin>
