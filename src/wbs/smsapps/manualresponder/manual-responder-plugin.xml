<plugin
	name="manual-responder"
	package="wbs.smsapps.manualresponder">

	<plugin-dependencies>
		<plugin-dependency name="network"/>
		<plugin-dependency name="route-core"/>
		<plugin-dependency name="sms-apps-common"/>
		<plugin-dependency name="sms-spend-limit"/>
	</plugin-dependencies>

	<sql-scripts>
		<sql-schema name="manual-responder"/>
	</sql-scripts>

	<models>
		<model name="manualResponder"/>
		<model name="manualResponderAffiliate"/>
		<model name="manualResponderNumber"/>
		<model name="manualResponderRequest"/>
		<model name="manualResponderReply"/>
		<model name="manualResponderReplyView"/>
		<model name="manualResponderTemplate"/>
	</models>

	<layer name="logic">
		<component class="logic.ManualResponderLogicImplementation"/>
	</layer>

	<layer name="console">
		<component class="console.ManualResponderNumThisHourCache"/>
		<component class="console.ManualResponderNumTodayCache"/>
		<component class="console.ManualResponderNumberConsoleHooks"/>
		<component class="console.ManualResponderQueueConsolePlugin"/>
		<component class="console.ManualResponderReplyUserStatsProvider"/>
		<component class="console.ManualResponderRequestConsoleHooks"/>
		<component class="console.ManualResponderRequestPendingFormAction"/>
		<component class="console.ManualResponderRequestPendingFormResponder"/>
		<component class="console.ManualResponderRequestPendingNumberNoteUpdateAction"/>
		<component class="console.ManualResponderRequestPendingSummaryPart"/>
		<component class="console.ManualResponderStatusLine"/>
		<component class="console.ManualResponderStatusLinePart"/>
	</layer>

	<layer name="daemon">
		<component class="daemon.ManualResponderCommand"/>
		<component class="daemon.ManualResponderDelivery"/>
	</layer>

	<fixtures>
		<fixture name="manualResponder"/>
	</fixtures>

	<console-modules>
		<console-module name="manual-responder"/>
		<console-module name="manual-responder-affiliate"/>
		<console-module name="manual-responder-number"/>
		<console-module name="manual-responder-reply"/>
		<console-module name="manual-responder-reply-view"/>
		<console-module name="manual-responder-request"/>
		<console-module name="manual-responder-request-pending"/>
		<console-module name="manual-responder-shared-report" />
		<console-module name="manual-responder-template"/>
	</console-modules>

</plugin>
