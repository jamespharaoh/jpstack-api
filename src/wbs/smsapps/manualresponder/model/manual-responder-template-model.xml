<model-meta
	name="manualResponderTemplate"
	type="minor">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="manualResponder"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<reference-field
			name="router"
			type="router"
			nullable="yes"/>

		<string-field
			name="number"
			nullable="yes"/>

		<string-field
			name="defaultText"
			default=""/>

		<yes-no-field
			name="customisable"
			default="no"/>

		<reference-field
			name="replyKeywordSet"
			type="keywordSet"
			nullable="yes"/>

		<integer-field
			name="maximumMessages"/>

		<integer-field
			name="minimumMessageParts"/>

		<yes-no-field
			name="splitLong"
			default="no"/>

		<yes-no-field
			name="sequenceParts"
			default="no"/>

		<yes-no-field
			name="applyTemplates"
			default="no"/>

		<string-field
			name="singleTemplate"
			nullable="yes"/>

		<string-field
			name="firstTemplate"
			nullable="yes"/>

		<string-field
			name="middleTemplate"
			nullable="yes"/>

		<string-field
			name="lastTemplate"
			nullable="yes"/>

		<string-field
			name="rules"
			nullable="yes"/>

	</fields>

</model-meta>