<console-module
	name="manual-responder-number">

	<console-helper-provider
		object-name="manualResponderNumber"
		view-priv="manualResponder:manage">

		<priv-key
			name="manualResponderNumber.manage"
			priv="manualResponder:manage"/>

		<context-stuff
			name="manualResponderNumberName"
			field="id"/>

		<context-stuff
			name="manualResponderId"
			field="manualResponder.id"/>

		<run-post-processor
			name="manualResponder"/>

	</console-helper-provider>

	<object-context
		name="manualResponderNumber"
		object-name="manualResponderNumber">

		<list>

			<object-search-page
				search-class="wbs.smsapps.manualresponder.model.ManualResponderNumberSearch"
				search-form="search-form"
				results-form="search-results"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="search-form"
			class="wbs.smsapps.manualresponder.model.ManualResponderNumberSearch"
			type="search">

			<columns>

				<text-field
					name="number"
					nullable="yes"/>

				<interval-field
					name="firstRequest"
					nullable="yes"/>

				<interval-field
					name="lastRequest"
					nullable="yes"/>

				<text-field
					name="notes"
					nullable="yes"/>

			</columns>

		</form>

		<form
			name="search-results"
			object-type="manual-responder-number"
			type="read-only">

			<columns>

				<object-field
					name="number"
					object-type="number"/>

				<object-field
					name="smsCustomer"
					label="Customer"
					object-type="smsCustomer"
					root-field="manualResponder.smsCustomerManager"/>

				<integer-field
					name="numRequests"
					label="Requests"/>

				<timestamp-field
					name="firstRequest"
					label="First"/>

				<timestamp-field
					name="lastRequest"
					label="Last"/>

				<text-field
					name="notesText"
					label="Notes"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="manual-responder-number"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>

				<object-field
					name="number"
					object-type="number"/>

				<object-field
					name="smsCustomer"
					label="Customer"
					object-type="smsCustomer"
					root-field="manualResponder.smsCustomerManager"/>

				<integer-field
					name="numRequests"
					label="Requests"/>

				<timestamp-field
					name="firstRequest"
					label="First"/>

				<timestamp-field
					name="lastRequest"
					label="Last"/>

				<text-area-field
					name="notesText"
					label="Notes"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="manual-responder-number"
			type="update">

			<columns>

				<text-area-field
					name="notesText"
					label="Notes"/>

			</columns>

		</form>

	</forms>

</console-module>
