<console-module
	name="manual-responder">

	<console-helper-provider
		object-name="manualResponder">

		<priv-key
			name="manualResponder.manage"
			priv="manage"/>

		<priv-key
			name="manualResponder.messages"
			priv="messages"/>

		<priv-key
			name="manualResponder.stats"
			priv="stats"/>

		<context-stuff
			name="manualResponderName"
			field="name"/>

	</console-helper-provider>

	<object-context
		name="manualResponder"
		object-name="manualResponder">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"
				target-responder="manualResponderSettingsGeneralResponder"/>

			<context-link
				name="sharedReport"
				link="manualResponderSharedReport"
				label="Shared reports"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<section
				name="settings"
				label="Settings">

				<object-settings-page
					short-name="general"
					form="settings"/>

				<context-link
					name="template"
					link="manualResponderTemplate"
					label="Templates"
					priv-key="manualResponder.manage"/>

				<context-link
					name="affiliate"
					link="manualResponderAffiliate"
					label="Affiliates"
					priv-key="manualResponder.manage"/>

				<object-privs-page/>

			</section>

			<section
				name="admin"
				label="Admin">

				<context-link
					name="number"
					link="manualResponderNumber"
					label="Numbers"
					priv-key="manualResponder.manage"/>

				<context-link
					name="request"
					link="manualResponderRequest"
					label="Requests"
					priv-key="manualResponder.manage"/>

			</section>

			<section
				name="report"
				label="Reports">

				<object-sms-stats-page/>

				<object-sms-messages-page/>

			</section>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="manual-responder"
			type="read-only">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="create"
			object-type="manual-responder"
			type="create">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="manual-responder"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<yes-no-field
					name="canIgnore"/>

				<yes-no-field
					name="canSendMultiple"/>

				<text-area-field
					name="infoText"
					label="Operator info (html)"/>

				<yes-no-field
					name="showDailyBillInfo"/>

				<seconds-field
					name="preferredQueueTime"/>

				<object-field
					name="unblockNumberList"
					object-type="numberList"/>

				<object-field
					name="smsSpendLimiter"
					object-type="smsSpendLimiter"
					feature="sms_spend_limit"/>

				<object-field
					name="smsCustomerManager"
					object-type="smsCustomerManager"/>

				<integer-field
					name="requiredAge"/>

				<object-field
					name="dateOfBirthTemplate"
					object-type="manualResponderTemplate"
					root-field="this"/>

				<object-field
					name="dateOfBirthErrorTemplate"
					object-type="manualResponderTemplate"
					root-field="this"/>

				<object-field
					name="tooYoungTemplate"
					object-type="manualResponderTemplate"
					root-field="this"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="manual-responder"
			type="update">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<yes-no-field
					name="canIgnore"
					nullable="yes"/>

				<yes-no-field
					name="canSendMultiple"
					nullable="yes"/>

				<text-area-field
					name="infoText"
					label="Operator info (html)"
					nullable="yes"/>

				<yes-no-field
					name="showDailyBillInfo"
					nullable="yes"/>

				<seconds-field
					name="preferredQueueTime"
					nullable="yes"/>

				<object-field
					name="currency"
					object-type="currency"
					nullable="yes"/>

				<object-field
					name="unblockNumberList"
					object-type="numberList"
					nullable="yes"/>

				<object-field
					name="smsSpendLimiter"
					object-type="smsSpendLimiter"
					nullable="yes"
					feature="sms_spend_limit"/>

				<object-field
					name="smsCustomerManager"
					object-type="smsCustomerManager"
					nullable="yes"/>

				<integer-field
					name="requiredAge"
					nullable="yes"/>

				<object-field
					name="dateOfBirthTemplate"
					object-type="manualResponderTemplate"
					nullable="yes"
					root-field="this"/>

				<object-field
					name="dateOfBirthErrorTemplate"
					object-type="manualResponderTemplate"
					nullable="yes"
					root-field="this"/>

				<object-field
					name="tooYoungTemplate"
					object-type="manualResponderTemplate"
					nullable="yes"
					root-field="this"/>

			</columns>

		</form>

	</forms>

</console-module>
