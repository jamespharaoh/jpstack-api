<console-module
	name="manual-responder-template">

	<console-helper-provider
		object-name="manualResponderTemplate"
		view-priv="manualResponder:manage">

		<context-stuff
			name="manualResponderTemplateName"
			field="name"/>

		<context-stuff
			name="manualResponderId"
			field="manualResponder.id"/>

		<run-post-processor
			name="manualResponder"/>

	</console-helper-provider>

	<object-context
		name="manualResponderTemplate"
		object-name="manualResponderTemplate">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"
				priv-key="manualResponder.manage"/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="manual-responder-template"
			type="read-only">

			<columns>

				<name-field/>
				<description-field/>

				<object-field
					name="router"
					object-type="router"/>

				<yes-no-field
					name="customisable"
					label="Cust"/>

				<integer-field
					name="maximumMessages"
					label="Max"/>

				<integer-field
					name="minimumMessageParts"
					label="MinParts"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="manual-responder-template"
			type="create">

			<columns>

				<name-field/>
				<description-field/>

				<object-field
					name="router"
					object-type="router"/>

				<text-field
					name="number"/>

				<text-area-field
					name="defaultText"/>

				<yes-no-field
					name="customisable"/>

				<yes-no-field
					name="hidden"/>

				<object-field
					name="replyKeywordSet"
					object-type="keywordSet"/>

				<integer-field
					name="maximumMessages"
					nullable="yes"/>

				<integer-field
					name="minimumMessageParts"
					nullable="yes"/>

				<yes-no-field
					name="splitLong"/>

				<yes-no-field
					name="sequenceParts"/>

				<yes-no-field
					name="applyTemplates"/>

				<text-area-field
					name="singleTemplate"
					nullable="yes"/>

				<text-area-field
					name="firstTemplate"
					nullable="yes"/>

				<text-area-field
					name="middleTemplate"
					nullable="yes"/>

				<text-area-field
					name="lastTemplate"
					nullable="yes"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="manual-responder-template"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>

				<object-field
					name="router"
					object-type="router"/>

				<text-field
					name="number"/>

				<text-area-field
					name="defaultText"/>

				<yes-no-field
					name="customisable"/>

				<yes-no-field
					name="hidden"/>

				<object-field
					name="replyKeywordSet"
					object-type="keywordSet"/>

				<integer-field
					name="maximumMessages"
					nullable="yes"/>

				<integer-field
					name="minimumMessageParts"
					nullable="yes"/>

				<yes-no-field
					name="splitLong"/>

				<yes-no-field
					name="sequenceParts"/>

				<yes-no-field
					name="applyTemplates"/>

				<text-area-field
					name="singleTemplate"
					nullable="yes"/>

				<text-area-field
					name="firstTemplate"
					nullable="yes"/>

				<text-area-field
					name="middleTemplate"
					nullable="yes"/>

				<text-area-field
					name="lastTemplate"
					nullable="yes"/>

				<text-field
					name="rules"
					nullable="yes"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="manual-responder-template"
			type="update">

			<columns>

				<id-field/>
				<code-field/>
				<name-field/>
				<description-field/>

				<object-field
					name="router"
					object-type="router"/>

				<text-field
					name="number"/>

				<text-area-field
					name="defaultText"/>

				<yes-no-field
					name="customisable"/>

				<yes-no-field
					name="hidden"/>

				<object-field
					name="replyKeywordSet"
					object-type="keywordSet"/>

				<integer-field
					name="maximumMessages"
					nullable="yes"/>

				<integer-field
					name="minimumMessageParts"
					nullable="yes"/>

				<yes-no-field
					name="splitLong"/>

				<yes-no-field
					name="sequenceParts"/>

				<yes-no-field
					name="applyTemplates"/>

				<text-area-field
					name="singleTemplate"
					nullable="yes"/>

				<text-area-field
					name="firstTemplate"
					nullable="yes"/>

				<text-area-field
					name="middleTemplate"
					nullable="yes"/>

				<text-area-field
					name="lastTemplate"
					nullable="yes"/>

				<text-field
					name="rules"
					nullable="yes"/>

			</columns>

		</form>

	</forms>

</console-module>