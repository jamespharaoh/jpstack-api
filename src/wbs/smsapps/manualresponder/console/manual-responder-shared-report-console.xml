<console-module
	name="manual-responder-shared-report">

	<simple-context
		name="manualResponderSharedReport">

		<object-search-page
			name="simple"
			tab-label="Simple"
			object-type="manualResponderRequest"
			search-class="wbs.smsapps.manualresponder.model.ManualResponderRequestSearch"
			search-form="simple-report-search"
			results-form="simple-report-results"/>

		<object-search-page
			name="service"
			tab-label="Service"
			object-type="manualResponderRequest"
			search-class="wbs.smsapps.manualresponder.model.ManualResponderRequestSearch"
			search-form="service-report-search"
			search-dao-method="searchServiceReportIds"
			results-class="wbs.smsapps.manualresponder.model.ManualResponderServiceReport"
			results-form="service-report-results"
			results-dao-method="searchServiceReports"/>

		<object-search-page
			name="operator"
			tab-label="Operator"
			object-type="manualResponderRequest"
			search-class="wbs.smsapps.manualresponder.model.ManualResponderRequestSearch"
			search-form="operator-report-search"
			search-dao-method="searchOperatorReportIds"
			results-class="wbs.smsapps.manualresponder.model.ManualResponderOperatorReport"
			results-form="operator-report-results"
			results-dao-method="searchOperatorReports"/>

	</simple-context>

	<forms>

		<!-- simple report -->

		<form
			name="simple-report-search"
			class="wbs.smsapps.manualresponder.model.ManualResponderRequestSearch"
			type="search">

			<columns>

				<interval-field
					name="processedTime"
					nullable="yes"/>

				<interval-field
					name="createdTime"
					nullable="yes"/>

			</columns>

		</form>

		<form
			name="simple-report-results"
			object-type="manual-responder-request"
			type="read-only">

			<columns>

				<object-field
					name="request"
					object-type="manualResponderRequest"
					field="this"/>

				<timestamp-field
					name="createdTime"
					field="timestamp"/>

				<timestamp-field
					name="processedTime"/>

				<object-field
					name="user"/>

				<integer-field
					name="numBilledMessages"
					label="Billed"/>

				<integer-field
					name="numFreeMessages"
					label="Free"/>

			</columns>

		</form>

		<!-- service report fields -->

		<form
			name="service-report-search"
			class="wbs.smsapps.manualresponder.model.ManualResponderRequestSearch"
			type="search">

			<columns>

				<object-field
					name="operatorSlice"
					field="processedByUserSliceId"
					object-type="slice"
					nullable="yes"/>

				<interval-field
					name="processedTime"
					nullable="yes"/>

				<interval-field
					name="createdTime"
					nullable="yes"/>

			</columns>

		</form>

		<form
			name="service-report-results"
			class="wbs.smsapps.manualresponder.model.ManualResponderServiceReport"
			type="read-only">

			<columns>

				<object-field
					name="manualResponder"
					object-type="manualResponder"/>

				<integer-field
					name="numBilled"
					label="Billed"/>

				<integer-field
					name="numFree"
					label="Free"/>

				<integer-field
					name="numTotal"
					label="Total"/>

			</columns>

		</form>

		<!-- operator report -->

		<form
			name="operator-report-search"
			class="wbs.smsapps.manualresponder.model.ManualResponderRequestSearch"
			type="search">

			<columns>

				<object-field
					name="serviceSlice"
					field="manualResponderSliceId"
					object-type="slice"
					nullable="yes"/>

				<interval-field
					name="processedTime"
					nullable="yes"/>

				<interval-field
					name="createdTime"
					nullable="yes"/>

			</columns>

		</form>

		<form
			name="operator-report-results"
			class="wbs.smsapps.manualresponder.model.ManualResponderOperatorReport"
			type="search">

			<columns>

				<object-field
					name="user"
					object-type="user"/>

				<integer-field
					name="numBilled"
					label="Billed"/>

				<integer-field
					name="numFree"
					label="Free"/>

				<integer-field
					name="numTotal"
					label="Total"/>

			</columns>

		</form>

	</forms>

</console-module>