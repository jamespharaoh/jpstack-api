<console-module
	name="manual-responder-request">

	<console-helper-provider
		object-name="manualResponderRequest"
		view-priv="manualResponderNumber.manualResponder:manage">

		<context-stuff
			name="manualResponderRequestName"
			field="id"/>

		<context-stuff
			name="manualResponderNumberId"
			field="manualResponderNumber.id"/>

		<run-post-processor
			name="manualResponderNumber"/>

	</console-helper-provider>

	<object-context
		name="manualResponderRequest"
		object-name="manualResponderRequest">

		<list>

			<object-search-page
				search-class="wbs.smsapps.manualresponder.model.ManualResponderRequestSearch"
				search-form="search"
				results-form="results"
				priv-key="manualResponder.manage"
				parent-id-key="manualResponderId"
				parent-id-name="manualResponderId"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

		</object>

	</object-context>

	<forms>

		<form
			name="search"
			class="wbs.smsapps.manualresponder.model.ManualResponderRequestSearch"
			type="search">

			<columns>

				<text-field
					name="numberLike"
					label="Number"
					nullable="yes"/>

				<interval-field
					name="createdTime"
					nullable="yes"/>

			</columns>

		</form>

		<form
			name="results"
			object-type="manual-responder-request"
			type="read-only">

			<columns>

				<timestamp-field
					name="timestamp"/>

				<object-field
					name="number"
					object-type="number"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="manual-responder-request"
			type="read-only">

			<columns>

				<parent-field/>

				<object-field
					name="message"
					object-type="message"/>

				<timestamp-field
					name="timestamp"/>

				<object-field
					name="user"
					object-type="user"/>

				<yes-no-field
					name="pending"/>

				<object-field
					name="number"
					object-type="number"/>

				<object-field
					name="queueItem"
					object-type="queueItem"/>

				<!-- TODO replies -->

			</columns>

		</form>

	</forms>

</console-module>
