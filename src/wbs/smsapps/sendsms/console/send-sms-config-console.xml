<console-module
	name="send-sms-config">

	<console-helper-provider
		object-name="sendSmsConfig">

		<priv-key
			name="sendSmsConfig.manage"
			priv="manage"/>

		<priv-key
			name="sendSmsConfig.messages"
			priv="messages"/>

		<priv-key
			name="sendSmsConfig.stats"
			priv="stats"/>

		<priv-key
			name="sendSmsConfig.send"
			priv="send"/>

		<context-stuff
			name="sendSmsConfigName"
			field="name"/>

	</console-helper-provider>

	<object-context
		name="sendSmsConfig"
		object-name="sendSmsConfig"
		default-file="send">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<context-tab-form-action-page
				name="send"
				action-form="send-message"
				help-text="Send an SMS to any number"
				submit-label="send message"/>

			<section
				name="report"
				label="Reports">

				<object-sms-stats-page/>

				<object-sms-messages-page/>

			</section>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="send-sms-config"
			type="read-only">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="create"
			object-type="send-sms-config"
			type="create">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

				<object-field
					name="smsRouter"
					label="SMS router"
					object-type="router"
					nullable="yes"/>

				<text-field
					name="originator"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="send-sms-config"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<object-field
					name="smsRouter"
					label="SMS router"
					object-type="router"/>

				<text-field
					name="originator"/>

			</columns>

		</form>

		<form
			name="send-message"
			class="wbs.smsapps.sendsms.console.SendSmsConfigSendForm"
			type="perform">

			<columns>

				<text-field
					name="originator"
					read-only="yes"/>

				<text-field
					name="number"
					nullable="no"/>

				<text-area-field
					name="messageBody"
					nullable="no"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="send-sms-config"
			type="update">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<object-field
					name="smsRouter"
					label="SMS router"
					object-type="router"
					nullable="yes"/>

				<text-field
					name="originator"/>

			</columns>

		</form>

	</forms>

</console-module>
