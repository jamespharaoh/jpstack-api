<console-module
	name="send-sms-config">

	<console-helper-provider
		object-name="sendSmsConfig">

		<priv-key
			name="sendSmsConfig.manage"
			priv="manage"/>

		<priv-key
			name="sendSmsConfig.messages"
			priv="messages"/>

		<priv-key
			name="sendSmsConfig.stats"
			priv="stats"/>

		<priv-key
			name="sendSmsConfig.send"
			priv="send"/>

		<context-stuff
			name="sendSmsConfigName"
			field="name"/>

	</console-helper-provider>

	<object-context
		name="sendSmsConfig"
		object-name="sendSmsConfig"
		default-file="send">

		<list>

			<object-list-page
				fields="list"/>

			<object-create-page
				fields="create"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"/>

			<context-tab-form-action-page
				name="send"
				action-form="send-message"
				help-text="Send an SMS to any number"
				submit-label="send message"/>

			<section
				name="report"
				label="Reports">

				<object-sms-stats-page/>

				<object-sms-messages-page/>

			</section>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="sendSmsConfig">

		<parent-field/>
		<name-field/>
		<description-field/>

	</field-set>

	<field-set
		name="create"
		object-name="sendSmsConfig">

		<parent-field/>
		<name-field/>
		<description-field/>

		<object-field
			name="smsRouter"
			label="SMS router"
			object-type="router"
			nullable="yes"/>

		<text-field
			name="originator"/>

	</field-set>

	<field-set
		name="summary"
		object-name="sendSmsConfig">

		<id-field/>
		<parent-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

		<object-field
			name="smsRouter"
			label="SMS router"
			object-type="router"/>

		<text-field
			name="originator"/>

	</field-set>

	<field-set
		name="settings"
		object-name="sendSmsConfig">

		<id-field/>
		<parent-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

		<object-field
			name="smsRouter"
			label="SMS router"
			object-type="router"
			nullable="yes"/>

		<text-field
			name="originator"/>

	</field-set>

	<forms>

		<form
			name="send-message"
			class="wbs.smsapps.sendsms.console.SendSmsConfigSendForm"
			type="perform">

			<column-fields>

				<text-field
					name="originator"
					read-only="yes"/>

				<text-field
					name="number"
					nullable="no"/>

				<text-area-field
					name="messageBody"
					nullable="no"/>

			</column-fields>

		</form>

	</forms>

</console-module>
