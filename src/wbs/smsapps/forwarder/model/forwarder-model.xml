<model-meta
	name="forwarder"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="slice"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<integer-field
			name="maxReplies"
			default="0"/>

		<integer-field
			name="maxFreeReplies"
			default="0"/>

		<integer-field
			name="maxBillReplies"
			default="0"/>

		<yes-no-field
			name="allowNewSends"
			default="no"/>

		<yes-no-field
			name="allowNullOtherId"
			default="no"/>

		<string-field
			name="password"
			nullable="yes"/>

		<string-field
			name="url"
			nullable="yes"/>

		<string-field
			name="urlParams"
			nullable="yes"/>

		<yes-no-field
			name="urlPost"
			default="yes"/>

		<integer-field
			name="maxPri"
			default="0"/>

		<integer-field
			name="defaultPri"
			default="0"/>

		<integer-field
			name="inboundTimeoutSecs"
			default="0"/>

		<integer-field
			name="outboundTimeoutSecs"
			default="0"/>

		<yes-no-field
			name="reportEnabled"
			default="no"/>

		<string-field
			name="reportUrl"
			nullable="yes"/>

		<reference-field
			type="smsTracker"
			nullable="yes"/>

	</fields>

	<collections>

		<children-collection
			type="forwarderRoute"/>

	</collections>

	<priv-types>

		<priv-type
			name="Manage"
			description="Full control of a forwarder service"
			template="yes"/>

		<priv-type
			name="Messages"
			description="View message history for a forwarder service"
			template="yes"/>

		<priv-type
			name="Stats"
			description="View message stats for a forwarder service"
			template="yes"/>

		<priv-type
			subject="slice"
			name="Forwarder create"
			description="Create a new forwarder service in a slice"
			template="yes"/>

	</priv-types>

	<command-types>

		<command-type
			name="Default"
			description="Forward a message to a forwarder service"/>

	</command-types>

	<service-types>

		<service-type
			name="Default"
			description="Forwarder service"/>

	</service-types>

	<delivery-types>

		<delivery-type
			name="Forwarder"
			description="Messages sent from a forwarder service"/>

	</delivery-types>

	<message-set-types>

		<message-set-type
			name="Default"
			description="Default message set for a forwarder service"/>

	</message-set-types>

</model-meta>
