<plugin
	name="forwarder"
	package="wbs.smsapps.forwarder">

	<plugin-dependencies>
		<plugin-dependency name="sms-apps-common"/>
	</plugin-dependencies>

	<sql-scripts>
		<sql-schema name="forwarder"/>
	</sql-scripts>

	<models>
		<model name="forwarder"/>
		<model name="forwarderMessageIn"/>
		<model name="forwarderMessageOut"/>
		<model name="forwarderMessageOutReport"/>
		<model name="forwarderRoute"/>
	</models>

	<layer name="logic">
		<component class="logic.ForwarderLogicImplementation"/>
	</layer>

	<layer name="api">
		<component class="api.ForwarderApiLogicImplementation"/>
		<component class="api.ForwarderApiModule"/>
		<component class="api.ForwarderInApiAction"/>
		<component class="api.ForwarderOutApiAction"/>
		<component class="api.ForwarderPeekExRequestDef"/>
		<component class="api.ForwarderPeekExRpcHandler"/>
		<component class="api.ForwarderQueryExMessageChecker"/>
		<component class="api.ForwarderQueryExRequestDef"/>
		<component class="api.ForwarderQueryExRpcHandler"/>
		<component class="api.ForwarderSendExRequestDef"/>
		<component class="api.ForwarderSendExRpcHandler"/>
		<component class="api.ForwarderSendRequestDef"/>
		<component class="api.ForwarderSendRpcHandler"/>
		<component class="api.ForwarderUnqueueExRpcHandler"/>
		<component class="api.ForwarderUnqueueExRequestDef"/>
	</layer>

	<layer name="daemon">
		<component class="daemon.ForwarderCommand"/>
		<component class="daemon.ForwarderDaemon"/>
		<component class="daemon.ForwarderDelivery"/>
	</layer>

	<console-modules>
		<console-module name="forwarder"/>
		<console-module name="forwarder-message-in"/>
		<console-module name="forwarder-message-out"/>
		<console-module name="forwarder-message-out-report"/>
		<console-module name="forwarder-route"/>
	</console-modules>

</plugin>
