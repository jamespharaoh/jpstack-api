<console-module
	name="forwarder-route">

	<console-helper-provider
		object-name="forwarderRoute"
		view-priv="forwarder:manage">

		<priv-key
			name="forwarderRoute.manage"
			priv="forwarder:manage"/>

		<context-stuff
			name="forwarderRouteName"
			field="name"/>

		<context-stuff
			name="forwarderId"
			field="forwarder.id"/>

		<run-post-processor
			name="forwarder"/>

	</console-helper-provider>

	<object-context
		name="forwarderRoute"
		object-name="forwarderRoute">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="forwarder-route"
			type="read-only">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="create"
			object-type="forwarder-route"
			type="create">

			<columns>

				<name-field/>
				<description-field/>

				<object-field
					name="router"
					object-type="router"/>

				<text-field
					name="number"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="forwarder-route"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<object-field
					name="router"
					object-type="router"/>

				<text-field
					name="number"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="forwarder-route"
			type="update">

			<columns>

				<id-field/>
				<parent-field read-only="yes"/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<object-field
					name="router"
					object-type="router"/>

				<text-field
					name="number"/>

			</columns>

		</form>

	</forms>

</console-module>
