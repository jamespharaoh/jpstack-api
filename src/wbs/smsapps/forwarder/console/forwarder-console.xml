<console-module
	name="forwarder">

	<console-helper-provider
		object-name="forwarder">

		<priv-key
			name="forwarder.manage"
			priv="manage"/>

		<priv-key
			name="forwarder.messages"
			priv="messages"/>

		<priv-key
			name="forwarder.stats"
			priv="stats"/>

		<context-stuff
			name="forwarderName"
			field="name"/>

	</console-helper-provider>

	<object-context
		name="forwarder"
		object-name="forwarder">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<context-link
				name="route"
				link="forwarderRoute"
				label="Routes"
				priv-key="forwarder.manage"/>

			<object-sms-messages-page/>

			<object-sms-stats-page/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="forwarder"
			type="read-only">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="create"
			object-type="forwarder"
			type="create">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="forwarder"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<integer-field
					name="maxReplies"/>

				<integer-field
					name="maxBillReplies"
					label="Max billed replies"/>

				<integer-field
					name="maxFreeReplies"/>

				<yes-no-field
					name="allowNewSends"/>

				<yes-no-field
					name="allowNullOtherId"
					label="Allow no id"/>

				<text-field
					name="password"/>

				<text-field
					name="url"
					label="URL"/>

				<text-field
					name="urlParams"
					label="URL params"/>

				<yes-no-field
					name="urlPost"
					label="URL method"
					yes-label="POST"
					no-label="GET"/>

				<integer-field
					name="maxPri"
					label="Max priority"/>

				<integer-field
					name="defaultPri"
					label="Default priority"/>

				<seconds-field
					name="inboundTimeoutSecs"
					label="Inbound message timeout"/>

				<yes-no-field
					name="reportEnabled"/>

				<object-field
					name="smsTracker"
					label="SMS tracker"
					object-type="smsTracker"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="forwarder"
			type="update">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<integer-field
					name="maxReplies"/>

				<integer-field
					name="maxBillReplies"
					label="Max billed replies"/>

				<integer-field
					name="maxFreeReplies"/>

				<yes-no-field
					name="allowNewSends"/>

				<yes-no-field
					name="allowNullOtherId"
					label="Allow no id"/>

				<text-field
					name="password"/>

				<text-field
					name="url"
					label="URL"/>

				<text-field
					name="urlParams"
					label="URL params"/>

				<yes-no-field
					name="urlPost"
					label="URL method"
					yes-label="POST"
					no-label="GET"/>

				<integer-field
					name="maxPri"
					label="Max priority"/>

				<integer-field
					name="defaultPri"
					label="Default priority"/>

				<seconds-field
					name="inboundTimeoutSecs"
					label="Inbound message timeout"/>

				<yes-no-field
					name="reportEnabled"/>

				<object-field
					name="smsTracker"
					label="SMS tracker"
					object-type="smsTracker"/>

			</columns>

		</form>

	</forms>

</console-module>
