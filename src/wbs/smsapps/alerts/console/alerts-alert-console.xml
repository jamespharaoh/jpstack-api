<console-module name="alerts-alert">

	<console-helper-provider
		 object-name="alertsAlert"
		 view-priv="alertsSettings">

		<context-stuff
			name="alertsAlertName"
			field="index"/>

		<context-stuff
			name="alertsSettingsId"
			field="alertsSettings.id"/>

		<run-post-processor
			name="alertsSettings"/>

	</console-helper-provider>

	<object-context
		name="alertsAlert"
		object-name="alertsAlert">

		<list>

			<object-list-page
				form="list"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="alerts-alert"
			type="read-only">

			<columns>

				<index-field/>

				<timestamp-field
					name="timestamp"/>

				<integer-field
					name="unclaimedItems"/>

				<seconds-field
					name="maximumDuration"/>

				<integer-field
					name="recipients"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="alerts-alert"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<index-field/>

				<timestamp-field name="timestamp"/>
				<integer-field name="unclaimedItems"/>
				<seconds-field name="maximumDuration"/>
				<text-area-field name="text"/>
				<integer-field name="recipients"/>

			</columns>

		</form>

	</forms>

</console-module>