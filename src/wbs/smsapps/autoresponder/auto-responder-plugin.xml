<plugin
	name="auto-responder"
	package="wbs.smsapps.autoresponder">

	<plugin-dependencies>
		<plugin-dependency name="sms-apps-common"/>
	</plugin-dependencies>

	<sql-scripts>
		<sql-schema name="auto-responder"/>
	</sql-scripts>

	<models>
		<model name="autoResponder"/>
		<model name="autoResponderRequest"/>
		<model name="autoResponderTemplate"/>
	</models>

	<layer name="console">
		<component class="console.AutoResponderVotesPart"/>
		<component class="console.AutoResponderSettingsTemplatesAction"/>
		<component class="console.AutoResponderSettingsTemplatesPart"/>
	</layer>

	<layer name="daemon">
		<component class="daemon.AutoResponderCommand"/>
		<component class="daemon.AutoResponderDelivery"/>
	</layer>

	<fixtures>
		<fixture name="autoResponder"/>
	</fixtures>

	<console-modules>
		<console-module name="auto-responder"/>
		<console-module name="auto-responder-votes"/>
	</console-modules>

</plugin>
