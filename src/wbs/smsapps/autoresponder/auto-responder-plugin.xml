<plugin
	name="auto-responder"
	package="autoresponder">

	<dependencies>
		<project name="wbs-sms-apps">
			<plugin name="sms-apps-common"/>
		</project>
	</dependencies>

	<sql-scripts>
		<sql-data name="auto-responder-data"/>
	</sql-scripts>

	<models>
		<model name="autoResponder"/>
	</models>

	<layer name="console">
		<bean class="console.AutoResponderVotesPart"/>
	</layer>

	<layer name="daemon">
		<bean class="daemon.AutoResponderCommand"/>
	</layer>

	<fixtures>
		<fixture name="autoResponder"/>
	</fixtures>

	<console-modules>
		<console-module name="auto-responder"/>
		<console-module name="auto-responder-votes"/>
	</console-modules>

</plugin>
