<model-meta
	name="autoResponderTemplate"
	type="minor">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="autoResponder"
			cacheable="yes"/>

		<index-field
			counter="numTemplates"
			cacheable="yes"/>

		<!-- settings -->

		<integer-field
			name="activeIndex"
			nullable="yes"/>

		<reference-field
			type="router"/>

		<string-field
			name="number"/>

		<string-field
			name="message"/>

	</fields>

</model-meta>