<model-meta
	name="autoResponderRequest"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="autoResponder"/>

		<timestamp-field
			name="timestamp"
			column-type="iso"/>

		<!-- details -->

		<reference-field
			name="number"
			type="number"/>

		<reference-field
			name="receivedMessage"
			type="message"/>

	</fields>

	<collections>

		<associative-list
			name="sentMessages"
			type="message"
			table="auto_responder_request_sent_message"
			owned="yes"/>

	</collections>

</model-meta>