<console-module name="auto-responder">

	<console-helper-provider
		object-name="autoResponder">

		<priv-key
			name="autoResponder.manage"
			priv="manage"/>

		<priv-key
			name="autoResponder.messages"
			priv="messages"/>

		<priv-key
			name="autoResponder.stats"
			priv="stats"/>

		<context-stuff
			name="autoResponderName"
			field="name"/>

	</console-helper-provider>

	<object-context
		name="autoResponder"
		object-name="autoResponder">

		<list>

			<object-list-page
				fields="list"/>

			<object-create-page/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"/>

			<object-sms-message-set-page
				name="responses"
				message-set="default"/>

			<object-sms-messages-page/>

			<object-sms-stats-page/>

			<extension-point
				name="autoResponder.plugins"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="autoResponder">

		<parent-field/>
		<name-field/>
		<description-field/>

		<object-field
			name="addToNumberList"
			label="Add to"
			finder="numberList"/>

	</field-set>

	<field-set
		name="summary"
		object-name="autoResponder">

		<id-field/>
		<parent-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

		<text-field
			name="emailAddress"/>

		<object-field
			name="addToNumberList"
			finder="numberList"/>

	</field-set>

	<field-set
		name="settings"
		object-name="autoResponder">

		<id-field/>
		<parent-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

		<text-field
			name="emailAddress"/>

		<object-field
			name="addToNumberList"
			finder="numberList"/>

	</field-set>

</console-module>
