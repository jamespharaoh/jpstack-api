<console-module
	name="auto-responder">

	<console-helper-provider
		object-name="autoResponder">

		<priv-key
			name="autoResponder.manage"
			priv="manage"/>

		<priv-key
			name="autoResponder.messages"
			priv="messages"/>

		<priv-key
			name="autoResponder.stats"
			priv="stats"/>

		<context-stuff
			name="autoResponderName"
			field="name"/>

	</console-helper-provider>

	<object-context
		name="autoResponder"
		object-name="autoResponder">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"
				target-context-type="autoResponder:combo/autoResponder.settings"
				target-responder="autoResponderSettingsGeneralResponder"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<section
				name="settings"
				label="Settings">

				<object-settings-page
					short-name="General"
					form="settings"/>

				<object-sms-message-set-page
					name="responses"
					message-set="default"/>

				<context-tab-action-page
					name="templates"/>

			</section>

			<object-sms-messages-page/>

			<object-sms-stats-page/>

			<extension-point
				name="autoResponder.plugins"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="auto-responder"
			type="read-only">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

				<object-field
					name="addToNumberList"
					label="Add to"
					object-type="numberList"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="auto-responder"
			type="create">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="auto-responder"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<text-field
					name="emailAddress"/>

				<object-field
					name="addToNumberList"
					object-type="numberList"/>

				<yes-no-field
					name="sequenceResponses"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="auto-responder"
			type="update">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<text-field
					name="emailAddress"/>

				<object-field
					name="addToNumberList"
					object-type="numberList"
					nullable="yes"/>

				<yes-no-field
					name="sequenceResponses"
					nullable="no"/>

			</columns>

		</form>

	</forms>

</console-module>
