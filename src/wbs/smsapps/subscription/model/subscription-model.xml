<model-meta
	name="subscription"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="slice"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<reference-field
			name="billedRoute"
			type="route"
			nullable="yes"/>

		<string-field
			name="billedNumber"
			nullable="yes"/>

		<reference-field
			name="billedMessage"
			type="text"
			nullable="yes"/>

		<reference-field
			name="freeRouter"
			type="router"
			nullable="yes"/>

		<string-field
			name="freeNumber"
			nullable="yes"/>

		<integer-field
			name="creditsPerBill"
			nullable="yes"/>

		<integer-field
			name="debitsPerSend"
			nullable="yes"/>

		<reference-field
			name="subscribeMessageText"
			type="text"
			nullable="yes"/>

		<reference-field
			name="unsubscribeMessageText"
			type="text"
			nullable="yes"/>

		<!-- statistics -->

		<integer-field
			name="numSubscribers"
			default="0"/>

		<integer-field
			name="numSendsTotal"
			default="0"/>

	</fields>

	<collections>

		<children-collection
			name="activeSubscriptionNumbers"
			type="subscriptionNumber"
			where-sql="active"/>

		<children-collection
			type="subscriptionAffiliate"/>

		<children-collection
			type="subscriptionList"/>

	</collections>

	<priv-types>

		<!-- subscription -->

		<priv-type
			name="Manage"
			description="Full control of a subscription service"
			template="yes"/>

		<priv-type
			name="Messages"
			description="View message history for a subscription service"
			template="yes"/>

		<priv-type
			name="Stats"
			description="View message statistics for a subscription service"
			template="yes"/>

		<priv-type
			name="Admin"
			description="Perform administrative tasks for a subscription service"
			template="yes"/>

		<!-- slice -->

		<priv-type
			subject="slice"
			name="Subscription create"
			description="Create new subscription services in a slice"
			template="yes"/>

	</priv-types>

	<command-types>

		<command-type
			name="Subscribe"
			description="Subscribe to a subscription service"/>

		<command-type
			name="Unsubscribe"
			description="Unsubscribe from a subscription service"/>

	</command-types>

	<service-types>

		<service-type
			name="Default"
			description="Subscription service"/>

	</service-types>

	<batch-types>

		<batch-type
			name="Send"
			batch="subscriptionSend"
			description="A single send to a subscription service"/>

	</batch-types>

	<delivery-types>

		<delivery-type
			name="Subscription"
			description="Billed messages sent by a subscription service"/>

	</delivery-types>

</model-meta>
