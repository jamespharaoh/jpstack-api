<console-module
	name="subscription-list">

	<console-helper-provider
		object-name="subscriptionList"
		view-priv="subscription:manage">

		<priv-key
			name="subscriptionList.manage"
			priv="manage"/>

		<priv-key
			name="subscriptionList.messages"
			priv="messages"/>

		<priv-key
			name="subscriptionList.stats"
			priv="stats"/>

		<context-stuff
			name="subscriptionListName"
			field="name"/>

		<context-stuff
			name="subscriptionId"
			field="subscription.id"/>

		<run-post-processor
			name="subscription"/>

	</console-helper-provider>

	<object-context
		name="subscriptionList"
		object-name="subscriptionList">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<object-sms-messages-page/>

			<object-sms-stats-page/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="subscription-list"
			type="read-only">

			<columns>

				<name-field/>
				<description-field/>

				<integer-field
					name="numSubscribers"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="subscription-list"
			type="create">

			<columns>

				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="subscription-list"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<integer-field
					name="numSubscribers"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="subscription-list"
			type="update">

			<columns>

				<id-field/>
				<parent-field read-only="yes"/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

			</columns>

		</form>

	</forms>

</console-module>
