<console-module
	name="subscription-send">

	<console-helper-provider
		object-name="subscriptionSend"
		view-priv="parent:manage">

		<priv-key
			name="subscriptionSend.manage"
			priv="subscription:manage"/>

		<context-stuff
			name="subscriptionSendName"
			field="id"/>

		<context-stuff
			name="subscriptionId"
			field="subscription.id"/>

		<run-post-processor
			name="subscription"/>

	</console-helper-provider>

	<object-context
		name="subscriptionSend"
		object-name="subscriptionSend">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"
				create-time="createdTime"
				create-user="createdUser"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<context-link
				name="part"
				link="subscriptionSendPart"
				label="Parts"
				priv-key="subscription.manage"/>

			<context-link
				name="number"
				link="subscriptionSendNumber"
				label="Numbers"
				priv-key="subscription.manage"/>

			<context-tab-action-page
				name="control"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="subscription-send"
			type="read-only">

			<columns>

				<index-field/>
				<description-field/>

				<object-field
					name="createdUser"
					object-type="user"/>

				<timestamp-field
					name="createdTime"/>

				<integer-field
					name="numRecipients"/>

				<enum-field
					name="state"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="subscription-send"
			type="create">

			<columns>

				<description-field/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="subscription-send"
			type="read-only">

			<columns>

				<id-field/>
				<index-field/>
				<description-field/>

				<object-field
					name="batch"
					object-type="batch"/>

				<object-field
					name="createdUser"
					label="Created by"
					object-type="user"/>

				<object-field
					name="sentUser"
					label="Sent by"
					object-type="user"/>

				<object-field
					name="cancelledUser"
					label="Cancelled by"
					object-type="user"/>

				<timestamp-field
					name="createdTime"/>

				<timestamp-field
					name="sentTime"/>

				<timestamp-field
					name="cancelledTime"/>

				<timestamp-field
					name="scheduledTime"/>

				<timestamp-field
					name="scheduledForTime"/>

				<integer-field
					name="numRecipients"/>

				<enum-field
					name="state"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="subscription-send"
			type="update">

			<columns>

				<description-field/>

			</columns>

		</form>

	</forms>

</console-module>
