<plugin
	name="subscription"
	package="wbs.smsapps.subscription">

	<plugin-dependencies>
		<plugin-dependency name="sms-apps-common"/>
	</plugin-dependencies>

	<models>
		<enum-type name="subscriptionBillState"/>
		<enum-type name="subscriptionSendState"/>
		<enum-type name="subscriptionSendNumberState"/>
		<model name="subscription"/>
		<model name="subscriptionAffiliate"/>
		<model name="subscriptionBill"/>
		<model name="subscriptionKeyword"/>
		<model name="subscriptionList"/>
		<model name="subscriptionNumber"/>
		<model name="subscriptionSend"/>
		<model name="subscriptionSendNumber"/>
		<model name="subscriptionSendPart"/>
		<model name="subscriptionSub"/>
	</models>

	<layer name="logic">
		<component class="logic.SubscriptionLogicImplementation"/>
		<component class="logic.SubscriptionSendHelper"/>
	</layer>

	<layer name="console">
		<component class="console.SubscriptionNumberAddRemoveAction"/>
		<component class="console.SubscriptionNumberAddRemovePart"/>
		<component class="console.SubscriptionNumberAdvice"/>
		<component class="console.SubscriptionNumberLinkProvider"/>
		<component class="console.SubscriptionNumberOverviewPart"/>
		<component class="console.SubscriptionSendControlAction"/>
		<component class="console.SubscriptionSendControlPart"/>
	</layer>

	<layer name="daemon">
		<component class="daemon.SubscriptionDeliveryNoticeHandler"/>
		<component class="daemon.SubscriptionScheduleDaemon"/>
		<component class="daemon.SubscriptionSendDaemon"/>
		<component class="daemon.SubscriptionCommand"/>
	</layer>

	<console-modules>
		<console-module name="subscription"/>
		<console-module name="subscription-affiliate"/>
		<console-module name="subscription-keyword"/>
		<console-module name="subscription-list"/>
		<console-module name="subscription-number"/>
		<console-module name="subscription-send"/>
		<console-module name="subscription-send-number"/>
		<console-module name="subscription-send-part"/>
	</console-modules>

	<fixtures>
		<fixture name="subscription"/>
	</fixtures>

</plugin>
