<plugin
	name="broadcast"
	package="wbs.smsapps.broadcast">

	<plugin-dependencies>
		<plugin-dependency name="sms-apps-common"/>
	</plugin-dependencies>

	<models>
		<enum-type name="broadcastNumberState"/>
		<enum-type name="broadcastState"/>
		<model name="broadcast"/>
		<model name="broadcastConfig"/>
		<model name="broadcastNumber"/>
	</models>

	<layer name="console">
		<component class="console.BroadcastNumbersAction"/>
		<component class="console.BroadcastNumbersPart"/>
		<component class="console.BroadcastSendAction"/>
		<component class="console.BroadcastSendPart"/>
	</layer>

	<layer name="daemon">
		<component class="daemon.BroadcastScheduleDaemon"/>
		<component class="daemon.BroadcastSendDaemon"/>
	</layer>

	<layer name="logic">
		<component class="logic.BroadcastLogicImplementation"/>
		<component class="logic.BroadcastSendHelper"/>
	</layer>

	<fixtures>
		<fixture name="broadcast"/>
	</fixtures>

	<console-modules>
		<console-module name="broadcast"/>
		<console-module name="broadcast-config"/>
		<console-module name="broadcast-number"/>
	</console-modules>

</plugin>
