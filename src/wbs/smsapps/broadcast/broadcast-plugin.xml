<plugin
	name="broadcast"
	package="broadcast">

	<sql-scripts>
		<sql-data name="broadcast-data"/>
	</sql-scripts>

	<models>
		<type name="broadcastNumberState"/>
		<type name="broadcastState"/>
		<model name="broadcast"/>
		<model name="broadcastConfig"/>
		<model name="broadcastNumber"/>
	</models>

	<layer name="console">
		<bean class="console.BroadcastNumbersAction"/>
		<bean class="console.BroadcastNumbersPart"/>
		<bean class="console.BroadcastNumberStateConsoleHelper"/>
		<bean class="console.BroadcastSendAction"/>
		<bean class="console.BroadcastSendPart"/>
		<bean class="console.BroadcastStateConsoleHelper"/>
	</layer>

	<layer name="daemon">
		<bean class="daemon.BroadcastScheduleDaemon"/>
		<bean class="daemon.BroadcastSendDaemon"/>
	</layer>

	<layer name="logic">
		<bean class="logic.BroadcastLogicImpl"/>
	</layer>

	<console-modules>
		<console-module name="broadcast"/>
		<console-module name="broadcast-config"/>
		<console-module name="broadcast-number"/>
	</console-modules>

</plugin>
