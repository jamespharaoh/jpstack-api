<model-meta
	name="broadcastConfig"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="slice"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<reference-field
			type="router"
			nullable="yes"/>

		<reference-field
			name="blockNumberLookup"
			type="numberLookup"
			nullable="yes"/>

		<reference-field
			type="numberFormat"/>

		<string-field
			name="defaultNumbers"
			nullable="yes"/>

		<!-- statistics -->

		<integer-field
			name="numTotal"
			default="0"/>

		<integer-field
			name="numUnsent"
			default="0"/>

		<integer-field
			name="numScheduled"
			default="0"/>

		<integer-field
			name="numSending"
			default="0"/>

		<integer-field
			name="numSent"
			default="0"/>

		<integer-field
			name="numPartiallySent"
			default="0"/>

		<integer-field
			name="numCancelled"
			default="0"/>

	</fields>

	<priv-types>

		<priv-type
			name="Manage"
			description="Full control of a broadcast config"
			template="yes"/>

		<priv-type
			name="Messages"
			description="View message history for a broadcast config"
			template="yes"/>

		<priv-type
			name="Stats"
			description="View message stats for a broadcast config"
			template="yes"/>

	</priv-types>

	<service-types>

		<service-type
			name="Default"
			description="Broadcast config"/>

	</service-types>

	<batch-types>

		<batch-type
			batch="broadcast"
			name="Broadcast"
			description="A single broadcast"/>

	</batch-types>

</model-meta>
