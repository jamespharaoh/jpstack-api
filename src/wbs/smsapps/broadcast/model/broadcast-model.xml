<model-meta
	name="broadcast"
	type="common">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="broadcastConfig"/>

		<index-field
			counter="numTotal"/>

		<!-- details -->

		<description-field/>

		<!-- state -->

		<enum-field
			name="state"
			type="broadcastState"
			default="unsent"/>

		<!-- settings -->

		<string-field
			name="messageOriginator"
			default=""/>

		<string-field
			name="messageText"
			default=""/>

		<!-- times -->

		<timestamp-field
			name="createdTime"
			column-type="iso"/>

		<timestamp-field
			name="scheduledTime"
			column-type="iso"
			nullable="yes"/>

		<timestamp-field
			name="sentTime"
			column-type="iso"
			nullable="yes"/>

		<timestamp-field
			name="cancelledTime"
			column-type="iso"
			nullable="yes"/>

		<!-- users -->

		<reference-field
			name="createdUser"
			type="user"/>

		<reference-field
			name="sentUser"
			type="user"
			nullable="yes"/>

		<reference-field
			name="cancelledUser"
			type="user"
			nullable="yes"/>

		<!-- statistics -->

		<integer-field
			name="numRemoved"
			default="0"/>

		<integer-field
			name="numAccepted"
			default="0"/>

		<integer-field
			name="numRejected"
			default="0"/>

		<integer-field
			name="numSent"
			default="0"/>

	</fields>

	<event-types>

		<event-type
			name="Broadcast numbers added"
			text="%0 added %1 number to %2"/>

		<event-type
			name="Broadcast numbers removed"
			text="%0 removed %1 numbers from %2"/>

		<event-type
			name="Broadcast scheduled"
			text="%0 scheduled %1 for %2"/>

		<event-type
			name="Broadcast unscheduled"
			text="%0 unscheduled %1"/>

		<event-type
			name="Broadcast cancelled"
			text="%0 cancelled %1 for %2"/>

		<event-type
			name="Broadcast send begun"
			text="%0 begun sending"/>

		<event-type
			name="Broadcast send completed"
			text="%0 completed sending"/>

	</event-types>

</model-meta>