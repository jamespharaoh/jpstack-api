<console-module
	name="broadcast">

	<console-helper-provider
		object-name="broadcast"
		view-priv="parent:manage">

		<context-stuff
			name="broadcastName"
			field="id"/>

		<context-stuff
			name="broadcastConfigId"
			field="broadcastConfig.id"/>

		<run-post-processor
			name="broadcastConfig"/>

	</console-helper-provider>

	<object-context
		name="broadcast"
		object-name="broadcast">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"
				create-time="createdTime"
				create-user="createdUser"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<context-tab-action-page
				name="numbers"/>

			<context-tab-action-page
				name="send"/>

			<object-sms-messages-page/>

			<object-sms-stats-page/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="broadcast"
			type="read-only">

			<columns>

				<index-field/>

				<enum-field
					name="state"/>

				<object-field
					name="createdUser"
					label="Created by"
					object-type="user"/>

				<timestamp-field
					name="createdTime"
					label="Created"/>

				<timestamp-field
					name="scheduledTime"
					label="Scheduled"/>

				<timestamp-field
					name="sentTime"
					label="Sent"/>

				<integer-field
					name="numTotal"
					label="Numbers"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="broadcast"
			type="create"/>

		<form
			name="summary"
			object-type="broadcast"
			type="read-only">

			<columns>

				<parent-field/>
				<index-field/>

				<enum-field
					name="state"/>

				<timestamp-field
					name="createdTime"/>

				<timestamp-field
					name="scheduledTime"/>

				<timestamp-field
					name="sentTime"/>

				<timestamp-field
					name="cancelledTime"/>

				<object-field
					name="createdUser"
					object-type="user"/>

				<object-field
					name="sentUser"
					object-type="user"/>

				<object-field
					name="cancelledUser"
					object-type="user"/>

				<!--
				<integer-field
					name="numTotal"/>
				-->

				<integer-field
					name="numAccepted"/>

				<integer-field
					name="numRejected"/>

				<integer-field
					name="numSent"/>

				<integer-field
					name="numRemoved"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="broadcast"
			type="update">

			<columns>

				<jquery-script-ref/>
				<script-ref path="/js/gsm.js"/>

				<id-field/>
				<parent-field read-only="yes"/>
				<index-field/>
				<description-field/>

				<text-field
					name="messageOriginator"/>

				<text-area-field
					name="messageText"
					char-count-function="gsmCharCountMultiple"/>

			</columns>

		</form>

	</forms>

</console-module>
