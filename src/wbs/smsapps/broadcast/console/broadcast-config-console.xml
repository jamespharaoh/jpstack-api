<console-module
	name="broadcast-config">

	<console-helper-provider
		object-name="broadcastConfig">

		<priv-key
			name="broadcastConfig.manage"
			priv="manage"/>

		<priv-key
			name="broadcastConfig.messages"
			priv="messages"/>

		<priv-key
			name="broadcastConfig.stats"
			priv="stats"/>

		<priv-key
			name="broadcast.manage"
			priv="manage"/>

		<priv-key
			name="broadcast.messages"
			priv="messages"/>

		<priv-key
			name="broadcast.stats"
			priv="stats"/>

		<context-stuff
			name="broadcastConfigName"
			field="name"/>

	</console-helper-provider>

	<object-context
		name="broadcastConfig"
		object-name="broadcastConfig"
		default-file="broadcast">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<context-link
				name="broadcast"
				link="broadcast"
				label="Broadcasts"
				priv-key="broadcastConfig.manage"/>

			<object-sms-messages-page/>

			<object-sms-stats-page/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="broadcast-config"
			type="read-only">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

				<integer-field
					name="numTotal"
					label="Count"/>

				<integer-field
					name="numUnsent"
					label="Unsent"/>

				<integer-field
					name="numScheduled"
					label="Scheduled"/>

				<integer-field
					name="numSending"
					label="Sending"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="broadcast-config"
			type="create">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="broadcast-config"
			type="read-only">

			<columns>

				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<integer-field
					name="numTotal"
					label="Total"/>

				<integer-field
					name="numUnsent"
					label="Unsent"/>

				<integer-field
					name="numScheduled"
					label="Scheduled"/>

				<integer-field
					name="numSending"
					label="Sending"/>

				<integer-field
					name="numSent"
					label="Sent"/>

				<integer-field
					name="numPartiallySent"
					label="Partially sent"/>

				<integer-field
					name="numCancelled"
					label="Cancelled"/>

				<object-field
					name="router"
					object-type="router"/>

				<object-field
					name="blockNumberLookup"
					object-type="numberLookup"/>

				<text-area-field
					name="defaultNumbers"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="broadcast-config"
			type="update">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<object-field
					name="router"
					object-type="router"/>

				<object-field
					name="blockNumberLookup"
					object-type="numberLookup"/>

				<object-field
					name="numberFormat"
					object-type="numberFormat"/>

				<text-area-field
					name="defaultNumbers"
					nullable="yes"/>

			</columns>

		</form>

	</forms>

</console-module>
