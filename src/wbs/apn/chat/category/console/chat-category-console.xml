<console-module
	name="chat-category">

	<console-helper-provider
		object-name="chatCategory"
		view-priv="chat">

		<context-stuff
			name="chatCategoryName"
			field="name"/>

		<context-stuff
			name="chatId"
			field="chat.id"/>

		<priv-key
			name="chatCategory.manage"
			priv="chat:manage"/>

		<run-post-processor
			name="chat"/>

	</console-helper-provider>

	<object-context
		name="chatCategory"
		object-name="chatCategory">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="chat-category"
			type="read-only">

			<columns>

				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="create"
			object-type="chat-category"
			type="create">

			<columns>

				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="chat-category"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="chat-category"
			type="update">

			<columns>

				<name-field/>
				<description-field/>
				<deleted-field/>

			</columns>

		</form>

	</forms>

</console-module>
