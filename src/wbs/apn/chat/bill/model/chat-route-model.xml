<model-meta
	name="chatRoute"
	type="minor">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="chat"/>

		<identity-reference-field
			type="route"/>

		<!-- details -->

		<deleted-field/>

		<!-- settings -->

		<integer-field
			name="mmsCost"/>

		<integer-field
			name="smsCost"/>

		<integer-field
			name="inRev"/>

		<integer-field
			name="outRev"/>

	</fields>

	<collections>

		<children-mapping
			type="chatRouteNetwork"
			map-column="network_id"
			map-type="integer"/>

	</collections>

</model-meta>