<model-meta
	name="chatUserCredit"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="chatUser"/>

		<timestamp-field
			name="timestamp"
			column-type="postgresql"/>

		<!-- data -->

		<integer-field
			name="creditAmount"
			column="amount"/>

		<integer-field
			name="billAmount"/>

		<reference-field
			type="user"/>

		<yes-no-field
			name="gift"/>

		<string-field
			name="details"/>

	</fields>

</model-meta>