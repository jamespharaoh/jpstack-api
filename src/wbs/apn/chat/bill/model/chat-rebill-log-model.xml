<model-meta
	name="chatRebillLog"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="chat"/>

		<timestamp-field
			name="timestamp"
			column-type="postgresql"/>

		<!-- data -->

		<reference-field
			name="user"
			type="user"/>

		<timestamp-field
			name="lastAction"
			column-type="postgresql"/>

		<integer-field
			name="minimumCreditOwed"
			nullable="yes"/>

		<yes-no-field
			name="includeBlocked"/>

		<yes-no-field
			name="includeFailed"/>

		<!-- statistics -->

		<integer-field
			name="numChatUsers"/>

	</fields>

	<collections>

		<associative-collection
			name="chatUsers"
			type="chatUser"
			table="chat_rebill_chat_user"
			owned="yes"/>

	</collections>

</model-meta>