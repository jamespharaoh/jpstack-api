<console-module
	name="chat-user-credit">

	<console-helper-provider
		object-name="chatUserCredit"
		view-priv="chatUser.chat:manage">

		<context-stuff
			name="chatUserCreditName"
			field="id"/>

		<context-stuff
			name="chatUserId"
			field="chatUser.id"/>

		<priv-key
			name="chatUserCredit.manage"
			priv="chatUser.chat:manage"/>

		<run-post-processor
			name="chatUser"/>

	</console-helper-provider>

	<object-context
		name="chatUserCredit"
		object-name="chatUserCredit">

		<object>

			<object-summary-page
				form="summary"/>

		</object>

	</object-context>

	<forms>

		<form
			name="summary"
			object-type="chat-user-credit"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>

				<timestamp-field
					name="timestamp"/>

				<currency-field
					name="creditAmount"
					currency="chatUser.chat.currency"/>

				<currency-field
					name="billAmount"
					currency="chatUser.chat.currency"/>

				<object-field
					name="user"
					object-type="user"/>

				<yes-no-field
					name="gift"/>

				<text-field
					name="details"/>

			</columns>

		</form>

	</forms>

</console-module>