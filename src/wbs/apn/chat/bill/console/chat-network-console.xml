<console-module
	name="chat-network">

	<console-helper-provider
		object-name="chatNetwork"
		view-priv="chat:manage">

		<context-stuff
			name="chatNetworkName"
			field="network.name"/>

		<context-stuff
			name="chatId"
			field="chat.id"/>

		<priv-key
			name="chatNetwork.manage"
			priv="chat:manage"/>

		<run-post-processor
			name="chat"/>

	</console-helper-provider>

	<object-context
		name="chatNetwork"
		object-name="chatNetwork">

		<list>

	`		<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="chat-network"
			type="read-only">

			<columns>

				<object-field
					name="network"
					object-type="network"/>

				<yes-no-field
					name="allowReverseBill"/>

				<yes-no-field
					name="allowPrePay"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="chat-network"
			type="create">

			<columns>

				<object-field
					name="network"
					object-type="network"/>

				<yes-no-field
					name="allowReverseBill"/>

				<yes-no-field
					name="allowPrePay"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="chat-network"
			type="read-only">

			<columns>

				<id-field/>

				<parent-field/>

				<object-field
					name="network"
					object-type="network"/>

				<yes-no-field
					name="allowReverseBill"/>

				<yes-no-field
					name="allowPrePay"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="chat-network"
			type="update">

			<columns>

				<id-field/>

				<object-field
					name="network"
					object-type="network"/>

				<yes-no-field
					name="allowReverseBill"/>

				<yes-no-field
					name="allowPrePay"/>

			</columns>

		</form>

	</forms>

</console-module>