<console-module
	name="chat-promo">

	<console-helper-provider
		object-name="chatPromo"
		view-priv="parent">

		<context-stuff
			name="chatPromoName"
			field="name"/>

		<context-stuff
			name="chatId"
			field="chat.id"/>

		<priv-key
			name="chatPromo.manage"
			priv="parent:manage"/>

		<priv-key
			name="chatPromo.messages"
			priv="parent:messages"/>

		<priv-key
			name="chatPromo.stats"
			priv="parent:stats"/>

		<run-post-processor
			name="chat"/>

	</console-helper-provider>

	<object-context
		name="chatPromo"
		object-name="chatPromo">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="chat-promo"
			type="read-only">

			<columns>

				<name-field/>
				<description-field/>

				<timestamp-field
					name="startTime"/>

				<timestamp-field
					name="endTime"/>

				<currency-field
					name="amount"
					currency="chat.currency"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="chat-promo"
			type="create">

			<columns>

				<name-field/>
				<description-field/>

				<timestamp-field
					name="startTime"/>

				<timestamp-field
					name="endTime"/>

				<currency-field
					name="amount"
					currency="chat.currency"/>

				<text-area-field
					name="successText"/>

				<text-area-field
					name="alreadyClaimedText"/>

				<text-area-field
					name="promoNotStartedText"/>

				<text-area-field
					name="promoEndedText"/>

				<yes-no-field
					name="joinChat"/>

				<yes-no-field
					name="joinDating"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="chat-promo"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<timestamp-field
					name="startTime"/>

				<timestamp-field
					name="endTime"/>

				<currency-field
					name="amount"
					currency="chat.currency"/>

				<text-area-field
					name="successText"/>

				<text-area-field
					name="alreadyClaimedText"/>

				<text-area-field
					name="promoNotStartedText"/>

				<text-area-field
					name="promoEndedText"/>

				<yes-no-field
					name="joinChat"/>

				<yes-no-field
					name="joinDating"/>

				<integer-field
					name="numUsers"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="chat-promo"
			type="update">

			<columns>

				<name-field/>
				<description-field/>
				<deleted-field/>

				<timestamp-field
					name="startTime"/>

				<timestamp-field
					name="endTime"/>

				<currency-field
					name="amount"
					currency="chat.currency"/>

				<text-area-field
					name="successText"/>

				<text-area-field
					name="alreadyClaimedText"/>

				<text-area-field
					name="promoNotStartedText"/>

				<text-area-field
					name="promoEndedText"/>

				<yes-no-field
					name="joinChat"/>

				<yes-no-field
					name="joinDating"/>

			</columns>

		</form>

	</forms>

</console-module>
