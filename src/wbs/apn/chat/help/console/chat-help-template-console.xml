<console-module
	name="chat-help-template">

	<console-helper-provider
		object-name="chatHelpTemplate"
		default-list-context="chatHelpTemplates.{typeCamel}"
		default-object-context="chatHelpTemplate.{typeCamel}"
		view-priv="chat:manage">

		<context-stuff
			name="chatHelpTemplateName"
			field="code"/>

		<context-stuff
			name="chatId"
			field="chat.id"/>

		<priv-key
			name="chatHelpTemplate.manage"
			priv="chat:manage"/>

		<run-post-processor
			name="chat"/>

	</console-helper-provider>

	<extend-context
		name="chat.settings.templates.help"
		base-name="chat.settings.templates"
		extension-point="chat.helpTemplates"
		object-name="chat">

		<chat-help-template-context
			type="system"/>

		<chat-help-template-context
			type="web"/>

		<chat-help-template-context
			type="help"/>

		<chat-help-template-context
			type="rejectName"/>

		<chat-help-template-context
			type="rejectInfo"/>

		<chat-help-template-context
			type="rejectPhoto"/>

		<chat-help-template-context
			type="rejectMessage"/>

	</extend-context>

	<field-set
		name="list"
		object-name="chatHelpTemplate">

		<code-field/>
		<description-field/>

		<text-field
			name="text"/>

	</field-set>

	<field-set
		name="create"
		object-name="chatHelpTemplate">

		<code-field/>
		<description-field/>

		<text-area-field
			name="text"/>

	</field-set>

	<field-set
		name="summary"
		object-name="chatHelpTemplate">

		<id-field/>
		<parent-field/>
		<code-field/>
		<description-field/>

		<text-area-field
			name="text"/>

	</field-set>

	<field-set
		name="settings"
		object-name="chatHelpTemplate">

		<code-field/>
		<description-field/>

		<text-area-field
			name="text"/>

	</field-set>

</console-module>
