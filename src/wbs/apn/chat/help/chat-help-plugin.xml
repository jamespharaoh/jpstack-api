<plugin
	name="chat-help"
	package="wbs.apn.chat.help">

	<models>
		<model name="chatHelpLog"/>
		<model name="chatHelpTemplate"/>
		<model name="chatHint"/>
		<model name="chatHintLog"/>
	</models>

	<layer name="logic">
		<component class="logic.ChatHelpLogicImplementation"/>
		<component class="logic.ChatHelpLogLogicImplementation"/>
		<component class="logic.ChatHelpTemplateLogicImplementation"/>
	</layer>

	<layer name="console">

		<bootstrap-component class="console.ChatHelpTemplateContextComponentBuilder"/>
		<bootstrap-component class="console.ChatHelpTemplateContextSpec"/>

		<component class="console.ChatHelpLogPendingFormAction"/>
		<component class="console.ChatHelpLogPendingFormResponder"/>
		<component class="console.ChatHelpLogPendingMessagesPart"/>
		<component class="console.ChatHelpLogPendingSummaryPart"/>
		<component class="console.ChatHelpQueueConsolePlugin"/>
		<component class="console.ChatHelpTemplateContextBuilder"/>
		<component class="console.ChatHelpTemplateContextMetaBuilder"/>

	</layer>

	<layer name="daemon">
		<component class="daemon.ChatHelpCommand"/>
	</layer>

	<console-modules>
		<console-module name="chat-help-log"/>
		<console-module name="chat-help-template"/>
		<console-module name="chat-hint"/>
		<console-module name="chat-hint-log"/>
	</console-modules>

</plugin>
