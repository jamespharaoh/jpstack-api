<console-module
	name="chat-affiliate">

	<console-helper-provider
		object-name="chatAffiliate">

		<context-stuff
			name="chatAffiliateName"
			field="name"/>

		<context-stuff
			name="chatSchemeId"
			field="chatScheme.id"/>

		<priv-key
			name="chatAffiliate.manage"
			priv="manage"/>

		<priv-key
			name="chatAffiliate.messages"
			priv="messages"/>

		<priv-key
			name="chatAffiliate.stats"
			priv="stats"/>

		<run-post-processor
			name="chatScheme"/>

	</console-helper-provider>

	<object-context
		name="chatAffiliate"
		object-name="chatAffiliate">

		<list>

			<object-list-page
				form="list"/>

			<context-tab-responder-page
				name="compare"/>

			<section
				name="create"
				label="Create">

				<object-create-page
					name="new"
					form="create"
					target-context-type="chatAffiliate:combo"/>

				<context-tab-action-page
					name="old"/>

			</section>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<section
				name="keywords"
				label="Keywords">

				<context-tab-responder-page
					name="list"/>

				<context-tab-action-page
					name="create"/>

			</section>

			<context-tab-responder-page
				name="users"/>

			<object-sms-messages-page/>

			<object-sms-stats-page/>

			<extension-point
				name="chatAffiliate.graphs"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="chat-affiliate"
			type="read-only">

			<columns>

				<text-field
					name="chatSchemeName"
					field="chatScheme.name"
					label="Scheme"/>

				<name-field/>
				<description-field/>

				<text-field
					name="brandName"/>

				<object-field
					name="category"
					object-type="chatCategory"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="chat-affiliate"
			type="create">

			<columns>

				<object-field
					name="chatScheme"
					label="Scheme"
					object-type="chatScheme"
					root-field="chatScheme.chat"/>

				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="chat-affiliate"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<text-field
					name="brandName"/>

				<object-field
					name="category"
					object-type="chatCategory"/>

				<integer-field
					name="numUsers"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="chat-affiliate"
			type="update">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<text-field
					name="brandName"
					nullable="yes"/>

				<object-field
					name="category"
					object-type="chatCategory"
					nullable="yes"/>

			</columns>

		</form>

	</forms>

</console-module>
