<console-module
	name="chat-affiliate">

	<console-helper-provider
		object-name="chatAffiliate">

		<context-stuff
			name="chatAffiliateName"
			field="name"/>

		<context-stuff
			name="chatSchemeId"
			field="chatScheme:id"/>

		<priv-key
			name="chatAffiliate.manage"
			priv="manage"/>

		<priv-key
			name="chatAffiliate.messages"
			priv="messages"/>

		<priv-key
			name="chatAffiliate.stats"
			priv="stats"/>

		<run-post-processor
			name="chatScheme"/>

	</console-helper-provider>

	<object-context
		name="chatAffiliate"
		object-name="chatAffiliate">

		<list>

			<object-list-page
				fields="list"/>

			<context-tab-responder-page
				name="compare"/>

			<section
				name="create"
				label="Create">

				<object-create-page
					name="new"
					fields="create"
					target-context-type="chatAffiliate:combo"/>

				<context-tab-action-page
					name="old"/>

			</section>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"/>

			<section
				name="keywords"
				label="Keywords">

				<context-tab-responder-page
					name="list"/>

				<context-tab-action-page
					name="create"/>

			</section>

			<context-tab-responder-page
				name="users"/>

			<object-sms-messages-page/>

			<object-sms-stats-page/>

			<extension-point
				name="chatAffiliate.graphs"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="chatAffiliate">

		<text-field
			name="chatSchemeName"
			field="chatScheme.name"
			label="Scheme"/>

		<name-field/>
		<description-field/>

		<text-field
			name="brandName"/>

		<object-field
			name="category"
			object-type="chatCategory"/>

	</field-set>

	<field-set
		name="create"
		object-name="chatAffiliate">

		<object-field
			name="chatScheme"
			label="Scheme"
			object-type="chatScheme"
			root-field="chatScheme.chat"/>

		<name-field/>
		<description-field/>

	</field-set>

	<field-set
		name="summary"
		object-name="chatAffiliate">

		<id-field/>
		<parent-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

		<text-field
			name="brandName"/>

		<object-field
			name="category"
			object-type="chatCategory"/>

		<integer-field
			name="numUsers"/>

	</field-set>

	<field-set
		name="settings"
		object-name="chatAffiliate">

		<id-field/>
		<parent-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

		<text-field
			name="brandName"
			nullable="yes"/>

		<object-field
			name="category"
			object-type="chatCategory"
			nullable="yes"/>

	</field-set>

</console-module>
