<plugin
	name="chat-broadcast"
	package="chat.broadcast">

	<sql-scripts>
		<sql-schema name="chat-broadcast"/>
	</sql-scripts>

	<models>
		<model name="chatBroadcast"/>
	</models>

	<layer name="console">
		<bean class="console.ChatBroadcastListPart"/>
		<bean class="console.ChatBroadcastSendAction"/>
		<bean class="console.ChatBroadcastSendPart"/>
		<bean class="console.ChatBroadcastVerifyPart"/>
	</layer>

	<console-modules>
		<console-module name="chat-broadcast"/>
	</console-modules>

</plugin>
