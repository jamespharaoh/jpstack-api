<model-meta
	name="chatSchemeCharges"
	type="minor">

	<fields>

		<!-- id -->

		<foreign-id-field
			field="chatScheme"/>

		<!-- identity -->

		<master-field
			type="chatScheme"/>

		<!-- settings -->

		<integer-field
			name="chargeChatSend"
			default="0"/>

		<integer-field
			name="chargeChatReceive"
			default="0"/>

		<integer-field
			name="chargeChatInfo"
			default="0"/>

		<integer-field
			name="chargeChatPic"
			default="0"/>

		<integer-field
			name="chargeChatPicDiv"
			default="1"/>

		<integer-field
			name="chargeChatVideo"
			default="0"/>

		<integer-field
			name="chargeChatVideoDiv"
			default="1"/>

		<integer-field
			name="creditLimit"
			default="0"/>

		<integer-field
			name="adultVerifyCredit"
			default="0"/>

		<yes-no-field
			name="billLimitEnabled"
			default="no"/>

		<integer-field
			name="billLimitLow"
			default="0"/>

		<integer-field
			name="billLimitHigh"
			default="0"/>

		<integer-field
			name="spendWarningEvery"
			nullable="yes"/>

	</fields>

</model-meta>