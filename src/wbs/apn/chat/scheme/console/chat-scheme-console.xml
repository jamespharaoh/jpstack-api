<console-module
	name="chat-scheme">

	<console-helper-provider
		object-name="chatScheme">

		<context-stuff
			name="chatSchemeName"
			field="name"/>

		<context-stuff
			name="chatId"
			field="chat.id"/>

		<priv-key
			name="chatScheme.manage"
			priv="manage"/>

		<run-post-processor
			name="chat"/>

	</console-helper-provider>

	<console-helper-provider
		object-name="chatSchemeCharges"
		id-key="chatSchemeId"/>

	<object-context
		name="chatScheme"
		object-name="chatScheme">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"
				target-responder="chatSchemeSummaryResponder"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				short-name="general"
				form="settings-general"/>

			<object-settings-page
				short-name="charges"
				object-name="chatSchemeCharges"
				form="settings-charges"
				priv-key="chatScheme.manage"/>

			<context-link
				name="keyword"
				link="chatSchemeKeyword"
				label="Keywords"
				priv-key="chatScheme.manage"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="chat-scheme"
			type="read-only">

			<columns>

				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="create"
			object-type="chat-scheme"
			type="create">

			<columns>

				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="chat-scheme"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<object-field
					name="rbBillRoute"
					label="Reverse bill route"
					object-type="route"/>

				<object-field
					name="rbFreeRouter"
					label="Reverse bill free router"
					object-type="router"/>

				<text-field
					name="rbNumber"
					label="Reverse bill number"/>

				<object-field
					name="magicNumberSet"
					object-type="magicNumberSet"/>

				<object-field
					name="magicRouter"
					object-type="router"/>

				<object-field
					name="mmsRoute"
					label="MMS route"
					object-type="route"/>

				<object-field
					name="mmsFreeRouter"
					label="MMS free router"
					object-type="router"/>

				<text-field
					name="mmsNumber"
					label="MMS number"/>

				<object-field
					name="mmsKeywordSet"
					label="MMS keyword set"
					object-type="keywordSet"/>

				<object-field
					name="wapRouter"
					label="WAP router"
					object-type="router"/>

				<integer-field
					name="initialCredit"/>

				<text-field
					name="style"/>

				<yes-no-field
					name="approvals"/>

				<object-field
					name="adultAdsScheme"
					object-type="chatScheme"/>

				<seconds-field
					name="adultExpirySeconds"
					label="Adult expiry time"/>

			</columns>

		</form>

		<form
			name="settings-general"
			object-type="chat-scheme"
			type="update">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<object-field
					name="rbBillRoute"
					label="Reverse bill route"
					object-type="route"/>

				<object-field
					name="rbFreeRouter"
					label="Reverse bill free router"
					object-type="router"/>

				<text-field
					name="rbNumber"
					label="Reverse bill number"/>

				<object-field
					name="magicNumberSet"
					object-type="magicNumberSet"/>

				<object-field
					name="magicRouter"
					object-type="router"/>

				<object-field
					name="mmsRoute"
					label="MMS route"
					object-type="route"/>

				<object-field
					name="mmsFreeRouter"
					label="MMS free router"
					object-type="router"/>

				<text-field
					name="mmsNumber"
					label="MMS number"/>

				<object-field
					name="mmsKeywordSet"
					label="MMS keyword set"
					object-type="keywordSet"
					nullable="yes"/>

				<object-field
					name="wapRouter"
					label="WAP router"
					object-type="router"
					nullable="yes"/>

				<integer-field
					name="initialCredit"/>

				<text-field
					name="style"/>

				<yes-no-field
					name="approvals"/>

				<timezone-field
					name="timezone"/>

				<enum-field
					name="operatorLabel"/>

				<object-field
					name="adultAdsScheme"
					object-type="chatScheme"
					nullable="yes"/>

				<seconds-field
					name="adultExpirySeconds"
					label="Adult expiry time"
					nullable="yes"/>

			</columns>

		</form>

		<form
			name="settings-charges"
			object-type="chat-scheme-charges"
			type="update">

			<columns>

				<currency-field
					name="chargeChatSend"
					label="Charge to send message"
					currency="chatScheme.chat.currency"/>

				<currency-field
					name="chargeChatReceive"
					label="Charge to receive message"
					currency="chatScheme.chat.currency"/>

				<currency-field
					name="chargeChatInfo"
					label="Charge to receive info"
					currency="chatScheme.chat.currency"/>

				<currency-field
					name="chargeChatPic"
					label="Charge to receive pictures"
					currency="chatScheme.chat.currency"/>

				<integer-field
					name="chargeChatPicDiv"
					label="Pictures received per charge"/>

				<currency-field
					name="chargeChatVideo"
					label="Charge to receive videos"
					currency="chatScheme.chat.currency"/>

				<integer-field
					name="chargeChatVideoDiv"
					label="Videos received per charge"/>

				<currency-field
					name="creditLimit"
					label="Credit limit"
					currency="chatScheme.chat.currency"/>

				<currency-field
					name="adultVerifyCredit"
					currency="chatScheme.chat.currency"/>

				<yes-no-field
					name="billLimitEnabled"/>

				<currency-field
					name="billLimitLow"
					currency="chatScheme.chat.currency"/>

				<currency-field
					name="billLimitHigh"
					currency="chatScheme.chat.currency"/>

				<currency-field
					name="spendWarningEvery"
					currency="chatScheme.chat.currency"
					nullable="yes"
					minimum="1"/>

			</columns>

		</form>

	</forms>

</console-module>
