<console-module
	name="chat-scheme-keyword">

	<console-helper-provider
		object-name="chatSchemeKeyword"
		view-priv="chatScheme">

		<context-stuff
			name="chatSchemeKeywordName"
			field="keyword"/>

		<context-stuff
			name="chatSchemeId"
			field="chatScheme.id"/>

		<priv-key
			name="chatSchemeKeyword.manage"
			priv="chatScheme:manage"/>

		<run-post-processor
			name="chatScheme"/>

	</console-helper-provider>

	<object-context
		name="chatSchemeKeyword"
		object-name="chatSchemeKeyword">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="chat-scheme-keyword"
			type="read-only">

			<columns>

				<code-field/>

				<enum-field
					name="joinType"
					label="Type"/>

				<enum-field
					name="joinGender"
					label="Gender"/>

				<enum-field
					name="joinOrient"
					label="Orient"/>

				<object-field
					name="joinChatAffiliate"
					label="Affiliate"
					object-type="chatAffiliate"/>

				<yes-no-field
					name="confirmCharges"
					label="Charges"/>

				<object-field
					name="command"
					object-type="command"/>

				<yes-no-field
					name="noCreditCheck"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="chat-scheme-keyword"
			type="create">

			<columns>

				<code-field/>

				<enum-field
					name="joinType"/>

				<enum-field
					name="joinGender"/>

				<enum-field
					name="joinOrient"/>

				<object-field
					name="joinChatAffiliate"
					object-type="chatAffiliate"/>

				<yes-no-field
					name="confirmCharges"/>

				<object-field
					name="command"
					object-type="command"/>

				<yes-no-field
					name="noCreditCheck"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="chat-scheme-keyword"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>

				<enum-field
					name="joinType"/>

				<enum-field
					name="joinGender"/>

				<enum-field
					name="joinOrient"/>

				<object-field
					name="joinChatAffiliate"
					object-type="chatAffiliate"
					root-field="chatScheme"/>

				<yes-no-field
					name="confirmCharges"/>

				<object-field
					name="command"
					object-type="command"/>

				<yes-no-field
					name="noCreditCheck"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="chat-scheme-keyword"
			type="update">

			<columns>

				<id-field/>
				<code-field/>

				<enum-field
					name="joinType"
					nullable="yes"/>

				<enum-field
					name="joinGender"
					nullable="yes"/>

				<enum-field
					name="joinOrient"
					nullable="yes"/>

				<object-field
					name="joinChatAffiliate"
					object-type="chatAffiliate"
					root-field="chatScheme"
					nullable="yes"/>

				<yes-no-field
					name="confirmCharges"/>

				<object-field
					name="command"
					object-type="command"
					nullable="yes"/>

				<yes-no-field
					name="noCreditCheck"/>

			</columns>

		</form>

	</forms>

</console-module>
