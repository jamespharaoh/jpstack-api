<console-module
	name="chat-ad">

	<console-helper-provider
		object-name="chatAdTemplate"
		view-priv="chat:manage">

		<context-stuff
			name="chatAdTemplateName"
			field="id"/>

		<context-stuff
			name="chatId"
			field="chat:id"/>

		<priv-key
			name="chatAdTemplate.manage"
			priv="chat:manage"/>

		<run-post-processor
			name="chat"/>

	</console-helper-provider>

	<object-context
		name="chatAdTemplate"
		object-name="chatAdTemplate">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-settings-page
				form="settings"/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="chat-ad-template"
			type="read-only">

			<columns>

				<text-field
					name="genericText"/>

				<text-field
					name="gayMaleText"/>

				<text-field
					name="gayFemaleText"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="chat-ad-template"
			type="create">

			<columns>

				<parent-field/>

				<text-field
					name="genericText"/>

				<text-field
					name="gayMaleText"/>

				<text-field
					name="gayFemaleText"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="chat-ad-template"
			type="update">

			<columns>

				<id-field/>

				<text-field
					name="genericText"/>

				<text-field
					name="gayMaleText"/>

				<text-field
					name="gayFemaleText"/>

			</columns>

		</form>

	</forms>

</console-module>
