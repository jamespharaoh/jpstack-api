<console-module
	name="chat-user-image">

	<console-helper-provider
		object-name="chatUserImage"/>

	<extend-context
		name="chatUser.images"
		base-name="chatUser"
		extension-point="chatUser.images"
		object-name="chatUser"
		component-name="chatUser"
		friendly-name="chat user">

		<section
			name="image"
			alias-of="image"
			label="Photos">

			<context-stuff
				name="chatUserImageType"
				value="image"/>

			<context-tab-action-page
				name="list"/>

			<context-tab-responder-page
				name="history"/>

			<context-tab-action-page
				name="upload"/>

			<context-tab-responder-page
				name="view"
				hide-tab="yes"/>

		</section>

		<section
			name="video"
			alias-of="image"
			label="Videos">

			<context-stuff
				name="chatUserImageType"
				value="video"/>

			<context-tab-action-page
				name="list"/>

			<context-tab-responder-page
				name="history"/>

			<context-tab-action-page
				name="upload"/>

			<context-tab-responder-page
				name="view"
				hide-tab="yes"/>

		</section>

		<section
			name="audio"
			alias-of="image"
			label="Audio">

			<context-stuff
				name="chatUserImageType"
				value="audio"/>

			<context-tab-action-page
				name="list"/>

			<context-tab-responder-page
				name="history"/>

			<context-tab-action-page
				name="upload"/>

			<context-tab-responder-page
				name="view"
				hide-tab="yes"/>

		</section>

	</extend-context>

	<forms>

		<form
			name="upload"
			class="wbs.apn.chat.user.image.console.ChatUserImageUploadForm"
			type="perform">

			<columns>

				<upload-field
					name="upload"
					label="File to upload"/>

				<yes-no-field
					name="setAsPrimary"/>

			</columns>

		</form>

	</forms>

</console-module>
