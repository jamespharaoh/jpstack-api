<console-module
	name="chat-keyword">

	<console-helper-provider
		object-name="chatKeyword"
		view-priv="chat:manage">

		<context-stuff
			name="chatKeywordName"
			field="keyword"/>

		<context-stuff
			name="chatId"
			field="chat.id"/>

		<priv-key
			name="chatKeyword.manage"
			priv="chat:manage"/>

		<run-post-processor
			name="chat"/>

	</console-helper-provider>

	<object-context
		name="chatKeyword"
		object-name="chatKeyword">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-settings-page
				form="settings"/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="chat-keyword"
			type="read-only">

			<columns>

				<code-field/>

				<yes-no-field
					name="global"/>

				<yes-no-field
					name="chatBlock"/>

				<yes-no-field
					name="chatInfo"/>

				<object-field
					name="command"
					object-type="command"/>

				<yes-no-field
					name="noCreditCheck"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="chat-keyword"
			type="create">

			<columns>

				<code-field/>

				<yes-no-field
					name="global"/>

				<yes-no-field
					name="chatBlock"/>

				<yes-no-field
					name="chatInfo"/>

				<object-field
					name="command"
					object-type="command"/>

				<yes-no-field
					name="noCreditCheck"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="chat-keyword"
			type="update">

			<columns>

				<id-field/>
				<code-field/>

				<yes-no-field
					name="global"/>

				<yes-no-field
					name="chatBlock"/>

				<yes-no-field
					name="chatInfo"/>

				<enum-field
					name="joinGender"
					nullable="yes"/>

				<enum-field
					name="joinOrient"
					nullable="yes"/>

				<enum-field
					name="joinType"
					nullable="yes"/>

				<object-field
					name="joinChatAffiliate"
					object-type="chatAffiliate"
					root-field="chat"/>

				<object-field
					name="command"
					object-type="command"/>

				<yes-no-field
					name="noCreditCheck"/>

			</columns>

		</form>

	</forms>

</console-module>
