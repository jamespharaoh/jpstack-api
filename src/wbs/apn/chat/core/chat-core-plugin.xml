<plugin
	name="chat-core"
	package="wbs.apn.chat.core">

	<plugin-dependencies>
		<plugin-dependency name="network"/>
		<plugin-dependency name="sms-apps-common"/>
		<plugin-dependency name="user"/>
	</plugin-dependencies>

	<sql-scripts>
		<sql-schema name="chat-stats"/>
	</sql-scripts>

	<models>
		<model name="chat"/>
		<model name="chatStats"/>
		<model name="chatMonthCost"/>
	</models>

	<layer name="logic">
		<component class="logic.ChatLogicHooksImplementation"/>
		<component class="logic.ChatMiscLogicImplementation"/>
		<component class="logic.ChatNumberLookupHelper"/>
		<component class="logic.ChatNumberReportLogicImplementation"/>
	</layer>

	<layer name="console">
		<component class="console.ChatConsoleLogicImplementation"/>
		<component class="console.ChatKeywordJoinTypeConsoleHelper"/>
	</layer>

	<layer name="daemon">
		<component class="daemon.ChatDaemonConfig"/>
		<component class="daemon.ChatBlockAllCommand"/>
		<component class="daemon.ChatLogoffCommand"/>
		<component class="daemon.ChatMagicCommand"/>
		<component class="daemon.ChatMainCommand"/>
		<component class="daemon.ChatNameCommand"/>
		<component class="daemon.ChatPhotoCommand"/>
		<component class="daemon.ChatSetPhotoCommand"/>
		<component class="daemon.ChatVideoGetCommand"/>
		<component class="daemon.ChatVideoSetCommand"/>
	</layer>

	<console-modules>
		<console-module name="chat"/>
		<console-module name="chat-month-cost"/>
	</console-modules>

	<fixtures>
		<fixture name="chatCore"/>
	</fixtures>

</plugin>
