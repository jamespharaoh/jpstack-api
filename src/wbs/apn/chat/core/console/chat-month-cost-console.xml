<console-module
	name="chat-month-cost">

	<console-helper-provider
		object-name="chatMonthCost"
		view-priv="chat:manage"
		id-key="id">

		<context-stuff
			name="chatId"
			field="chat.id"/>

		<context-stuff
			name="chatMonthCostName"
			field="id"/>

		<priv-key
			name="chatMonthCost.manage"
			priv="chat:manage"/>

		<run-post-processor
			name="chat"/>

	</console-helper-provider>

	<object-context
		name="chatMonthCost"
		object-name="chatMonthCost">

		<list>

	`		<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="chat-month-cost"
			type="read-only">

			<columns>

				<object-field
					name="chat"
					object-type="chat"/>

				<code-field
					name="yearMonth"
					pattern="^\d{4}-\d{2}$"/>

				<integer-field
					name="staffCost"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="chat-month-cost"
			type="create">

			<columns>

				<object-field
					name="chat"
					object-type="chat"/>

				<code-field
					name="yearMonth"
					pattern="^\d{4}-\d{2}$"/>

				<integer-field
					name="staffCost"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="chat-month-cost"
			type="read-only">

			<columns>

				<object-field
					name="chat"
					object-type="chat"/>

				<code-field
					name="yearMonth"
					pattern="^\d{4}-\d{2}$"/>

				<integer-field
					name="staffCost"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="chat-month-cost"
			type="update">

			<columns>

				<object-field
					name="chat"
					object-type="chat"/>

				<code-field
					name="yearMonth"
					pattern="^\d{4}-\d{2}$"/>

				<integer-field
					name="staffCost"/>

			</columns>

		</form>

	</forms>

</console-module>