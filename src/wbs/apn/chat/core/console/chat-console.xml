<console-module
	name="chat">

	<console-helper-provider
		object-name="chat">

		<context-stuff
			name="chatName"
			field="name"/>

		<context-stuff
			name="sliceId"
			field="slice.id"/>

		<priv-key
			name="chat.manage"
			priv="manage"/>

		<priv-key
			name="chat.help"
			priv="help"/>

		<priv-key
			name="chat.history"
			priv="history"/>

		<priv-key
			name="chat.number"
			priv="number"/>

		<priv-key
			name="chat.messages"
			priv="messages"/>

		<priv-key
			name="chat.stats"
			priv="stats"/>

		<priv-key
			name="chat.supervisor"
			priv="supervisor"/>

		<priv-key
			name="chat.userAdmin"
			priv="user_admin"/>

		<priv-key
			name="chat.userCreate"
			priv="user_create"/>

		<priv-key
			name="chat.userView"
			priv="chat_user_view"/>

		<priv-key
			name="chat.userCredit"
			priv="user_credit"/>

		<priv-key
			name="chat.broadcast"
			priv="broadcast"/>

		<run-post-processor
			name="slice"/>

	</console-helper-provider>

	<object-context
		name="chat"
		object-name="chat">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"
				target-responder="chatSummaryResponder"/>

			<context-link
				name="sharedReport"
				link="chatSharedReport"
				label="Shared reports"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<extension-point
				name="chat.settings"/>

			<context-link
				name="affiliate"
				link="chatAffiliate"
				label="Affiliates"
				priv-key="chat.manage"/>

			<context-link
				name="user"
				link="chatUser"
				label="Users"
				priv-key="chat.userView"/>

			<extension-point
				name="chat.plugin"/>

			<section
				name="tools"
				label="Tools">

				<extension-point
					name="chat.broadcast"/>

				<extension-point
					name="chat.rebill"/>

			</section>

			<extension-point
				name="chat.supervisor"/>

			<context-link
				name="report"
				link="chatReport"
				label="Reports"
				priv-key="chat.manage"/>

			<object-sms-messages-page/>

			<object-sms-stats-page/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="chat"
			type="read-only">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="create"
			object-type="chat"
			type="create">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="chat"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

			</columns>

		</form>

	</forms>

</console-module>
