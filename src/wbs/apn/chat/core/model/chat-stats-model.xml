<model-meta
	name="chatStats"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="chat"/>

		<timestamp-field
			name="timestamp"
			column-type="postgresql"/>

		<!-- statistics -->

		<integer-field
			name="numUsers"/>

		<integer-field
			name="numMonitors"/>

	</fields>

</model-meta>