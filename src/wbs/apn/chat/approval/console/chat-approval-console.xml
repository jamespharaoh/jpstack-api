<console-module
	name="chat-approval">

	<console-helper-provider
		object-name="chatApprovalRegexp"
		view-priv="chat:manage">

		<context-stuff
			name="chatApprovalRegexpName"
			field="id"/>

		<context-stuff
			name="chatId"
			field="chat.id"/>

		<priv-key
			name="chatApprovalRegexp.manage"
			priv="chat:manage"/>

		<run-post-processor
			name="chat"/>

	</console-helper-provider>

	<object-context
		name="chatApprovalRegexp"
		object-name="chatApprovalRegexp">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-settings-page
				form="settings"/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="chat-approval-regexp"
			type="read-only">

			<columns>

				<text-field
					name="regexp"/>

				<yes-no-field
					name="auto"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="chat-approval-regexp"
			type="create">

			<columns>

				<text-field
					name="regexp"/>

				<yes-no-field
					name="auto"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="chat-approval-regexp"
			type="update">

			<columns>

				<id-field/>

				<text-field
					name="regexp"/>

				<yes-no-field
					name="auto"/>

			</columns>

		</form>

	</forms>

</console-module>
