<model-meta
	name="chatMessageView"
	type="event"
	create="no">

	<fields>

		<!-- id -->

		<foreign-id-field
			field="chatMessage"/>

		<!-- identity -->

		<master-field
			type="chatMessage"/>

		<!-- index -->

		<reference-field
			name="chat"
			type="chat"/>

		<reference-field
			name="senderUser"
			type="user"/>

		<timestamp-field
			name="timestamp"
			column-type="postgresql"/>

		<!-- data -->

		<integer-field
			name="numMessages"/>

		<integer-field
			name="numMessagesIn"/>

		<integer-field
			name="numMessagesOut"/>

		<integer-field
			name="numCharacters"/>

		<integer-field
			name="numCharactersIn"/>

		<integer-field
			name="numCharactersOut"/>

		<integer-field
			name="numMessagesFinal"/>

		<integer-field
			name="numMessagesFinalIn"/>

		<integer-field
			name="numMessagesFinalOut"/>

	</fields>

</model-meta>