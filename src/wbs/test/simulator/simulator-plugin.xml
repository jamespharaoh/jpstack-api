<plugin
	name="simulator"
	package="simulator">

	<dependencies>
		<project name="wbs-test">
			<plugin name="test-common"/>
		</project>
	</dependencies>

	<sql-scripts>
		<sql-data name="simulator-data"/>
	</sql-scripts>

	<models>
		<model name="simulator"/>
		<model name="simulatorEvent"/>
		<model name="simulatorSession"/>
	</models>

	<layer name="console">
		<bean class="console.SimulatorRouteSummaryAdditionalPart"/>
		<bean class="console.SimulatorRouteSummaryAdditionalPartFactory"/>
		<bean class="console.SimulatorSessionConsolePart"/>
		<bean class="console.SimulatorSessionCreateEventAction"/>
		<bean class="console.SimulatorSessionPollAction"/>
	</layer>

	<layer name="daemon">
		<bean class="daemon.SimulatorSender"/>
	</layer>

	<fixtures>
		<fixture name="simulator"/>
	</fixtures>

	<console-modules>
		<console-module name="simulator"/>
		<console-module name="simulator-session"/>
	</console-modules>

</plugin>
