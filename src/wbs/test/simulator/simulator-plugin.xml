<plugin
	name="simulator"
	package="wbs.test.simulator">

	<plugin-dependencies>
		<plugin-dependency name="test-common"/>
		<plugin-dependency name="platform-user"/>
	</plugin-dependencies>

	<models>
		<model name="simulator"/>
		<model name="simulatorEvent"/>
		<model name="simulatorRoute"/>
		<model name="simulatorSession"/>
		<model name="simulatorSessionNumber"/>
	</models>

	<layer name="console">
		<component class="console.SimulatorRouteSummaryAdditionalPart"/>
		<component class="console.SimulatorRouteSummaryAdditionalPartFactory"/>
		<component class="console.SimulatorSessionConsolePart"/>
		<component class="console.SimulatorSessionCreateEventAction"/>
		<component class="console.SimulatorSessionPollAction"/>
	</layer>

	<layer name="daemon">
		<component class="daemon.SimulatorSenderHelper"/>
		<component class="daemon.SimulatorSenderService"/>
	</layer>

	<fixtures>
		<fixture name="simulator"/>
	</fixtures>

	<console-modules>
		<console-module name="simulator"/>
		<console-module name="simulator-route"/>
		<console-module name="simulator-session"/>
	</console-modules>

</plugin>
