<console-module
	name="simulator">

	<console-helper-provider
		object-name="simulator">

		<priv-key
			name="simulator.manage"
			priv="manage"/>

		<context-stuff
			name="simulatorName"
			field="name"/>

	</console-helper-provider>

	<object-context
		name="simulator"
		object-name="simulator"
		default-file="session">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"
				target-responder="simulatorSettingsGeneralResponder"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<section
				name="settings"
				label="Settings">

				<object-settings-page
					short-name="general"
					form="settings"/>

				<context-link
					name="route"
					link="simulatorRoute"
					label="Routes"
					priv-key="simulator.manage"/>

			</section>

			<context-link
				name="session"
				link="simulatorSession"
				label="Sessions"
				priv-key="simulator.manage"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="simulator"
			type="read-only">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="create"
			object-type="simulator"
			type="create">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="simulator"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="simulator"
			type="update">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

			</columns>

		</form>

	</forms>

</console-module>
