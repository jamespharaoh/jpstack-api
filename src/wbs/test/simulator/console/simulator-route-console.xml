<console-module
	name="simulator-route">

	<console-helper-provider
		object-name="simulatorRoute"
		view-priv="simulator:manage">

		<priv-key
			name="simulatorRoute.manage"
			priv="parent:manage"/>

		<context-stuff
			name="simulatorRouteName"
			field="prefix"/>

		<context-stuff
			name="simulatorId"
			field="simulator.id"/>

		<run-post-processor
			name="simulator"/>

	</console-helper-provider>

	<object-context
		name="simulatorRoute"
		object-name="simulatorRoute">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="simulator-route"
			type="read-only">

			<columns>

				<code-field/>
				<description-field/>

				<object-field
					name="route"
					object-type="route"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="simulator-route"
			type="read-only">

			<columns>

				<code-field pattern="^[0-9a-z]+$"/>
				<description-field/>

				<object-field
					name="route"
					object-type="route"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="simulator-route"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<description-field/>

				<object-field
					name="route"
					object-type="route"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="simulator-route"
			type="update">

			<columns>

				<code-field pattern="^[0-9a-z]+$"/>
				<description-field/>

				<object-field
					name="route"
					object-type="route"/>

			</columns>

		</form>

	</forms>

</console-module>
