<console-module
	name="simulator-route">

	<console-helper-provider
		object-name="simulatorRoute"
		view-priv="simulator:manage">

		<priv-key
			name="simulatorRoute.manage"
			priv="parent:manage"/>

		<context-stuff
			name="simulatorRouteName"
			field="prefix"/>

		<context-stuff
			name="simulatorId"
			field="simulator.id"/>

		<run-post-processor
			name="simulator"/>

	</console-helper-provider>

	<object-context
		name="simulatorRoute"
		object-name="simulatorRoute">

		<list>

			<object-list-page
				fields="list"/>

			<object-create-page
				fields="create"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="simulatorRoute">

		<code-field/>
		<description-field/>

		<object-field
			name="route"
			object-type="route"/>

	</field-set>

	<field-set
		name="create"
		object-name="simulatorRoute">

		<code-field pattern="^[0-9a-z]+$"/>
		<description-field/>

		<object-field
			name="route"
			object-type="route"/>

	</field-set>

	<field-set
		name="summary"
		object-name="simulatorRoute">

		<id-field/>
		<parent-field/>
		<code-field/>
		<description-field/>

		<object-field
			name="route"
			object-type="route"/>

	</field-set>

	<field-set
		name="settings"
		object-name="simulatorRoute">

		<code-field pattern="^[0-9a-z]+$"/>
		<description-field/>

		<object-field
			name="route"
			object-type="route"/>

	</field-set>

</console-module>
