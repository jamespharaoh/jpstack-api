<model-meta
	name="chatInfoSite"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="chatUser"/>

		<!-- TODO index -->

		<timestamp-field
			name="createTime"
			column-type="sql"/>

		<!-- data -->

		<timestamp-field
			name="expireTime"
			column-type="sql"/>

		<string-field
			name="token"/>

		<!-- statistics -->

		<timestamp-field
			name="firstViewTime"
			column-type="sql"/>

		<timestamp-field
			name="lastViewTime"
			column-type="sql"/>

		<timestamp-field
			name="lastExpiredTime"
			column-type="sql"/>

		<integer-field
			name="numViews"/>

		<integer-field
			name="numExpired"/>

	</fields>

	<collections>

		<associative-list
			name="otherChatUsers"
			type="chatUser"
			table="chat_info_site_user"/>

	</collections>

</model-meta>