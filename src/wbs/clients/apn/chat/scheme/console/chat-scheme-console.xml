<console-module
	name="chat-scheme">

	<console-helper-provider
		object-name="chatScheme">

		<context-stuff
			name="chatSchemeName"
			field="name"/>

		<context-stuff
			name="chatId"
			delegate="chat"
			field="id"/>

		<priv-key
			name="chatScheme.manage"
			priv="manage"/>

		<run-post-processor
			name="chat"/>

	</console-helper-provider>

	<console-helper-provider
		object-name="chatSchemeCharges"
		id-key="chatSchemeId"/>

	<object-context
		name="chatScheme"
		object-name="chatScheme">

		<list>

			<object-list-page
				fields="list"/>

			<object-create-page
				target-responder="chatSchemeSummaryResponder"/>

		</list>

		<object>

			<object-summary-page/>

			<object-settings-page
				short-name="general"
				fields="settings-general"/>

			<object-settings-page
				short-name="charges"
				object-name="chatSchemeCharges"
				fields="settings-charges"
				priv-key="chatScheme.manage"/>

			<context-link
				name="keyword"
				link="chatSchemeKeyword"
				label="Keywords"
				priv-key="chatScheme.manage"/>

			<object-events-page/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="chatScheme">

		<name-field/>
		<description-field/>

	</field-set>

	<field-set
		name="summary"
		object-name="chatScheme">

		<id-field/>
		<parent-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

		<object-field
			name="rbBillRoute"
			label="Reverse bill route"
			object-type="route"/>

		<object-field
			name="rbFreeRouter"
			label="Reverse bill free router"
			object-type="router"/>

		<text-field
			name="rbNumber"
			label="Reverse bill number"/>

		<object-field
			name="magicNumberSet"
			object-type="magicNumberSet"/>

		<object-field
			name="magicRouter"
			object-type="router"/>

		<object-field
			name="mmsRoute"
			label="MMS route"
			object-type="route"/>

		<object-field
			name="mmsFreeRouter"
			label="MMS free router"
			object-type="router"/>

		<text-field
			name="mmsNumber"
			label="MMS number"/>

		<object-field
			name="mmsKeywordSet"
			label="MMS keyword set"
			object-type="keywordSet"/>

		<object-field
			name="wapRouter"
			label="WAP router"
			object-type="router"/>

		<integer-field
			name="initialCredit"/>

		<text-field
			name="style"/>

		<yes-no-field
			name="approvals"/>

	</field-set>

	<field-set
		name="settings-general"
		object-name="chatScheme">

		<id-field/>
		<parent-field/>
		<code-field/>
		<name-field/>
		<description-field/>
		<deleted-field/>

		<object-field
			name="rbBillRoute"
			label="Reverse bill route"
			object-type="route"/>

		<object-field
			name="rbFreeRouter"
			label="Reverse bill free router"
			object-type="router"/>

		<text-field
			name="rbNumber"
			label="Reverse bill number"/>

		<object-field
			name="magicNumberSet"
			object-type="magicNumberSet"/>

		<object-field
			name="magicRouter"
			object-type="router"/>

		<object-field
			name="mmsRoute"
			label="MMS route"
			object-type="route"/>

		<object-field
			name="mmsFreeRouter"
			label="MMS free router"
			object-type="router"/>

		<text-field
			name="mmsNumber"
			label="MMS number"/>

		<object-field
			name="mmsKeywordSet"
			label="MMS keyword set"
			object-type="keywordSet"
			nullable="yes"/>

		<object-field
			name="wapRouter"
			label="WAP router"
			object-type="router"
			nullable="yes"/>

		<integer-field
			name="initialCredit"/>

		<text-field
			name="style"/>

		<yes-no-field
			name="approvals"/>

		<text-field
			name="timezone"/>

		<enum-field
			name="operatorLabel"
			helper="chatUserOperatorLabelConsoleHelper"/>

	</field-set>

	<field-set
		name="settings-charges"
		object-name="chatSchemeCharges">

		<currency-field
			name="chargeChatSend"
			label="Charge to send message"
			currency="chatScheme.chat.currency"/>

		<currency-field
			name="chargeChatReceive"
			label="Charge to receive message"
			currency="chatScheme.chat.currency"/>

		<currency-field
			name="chargeChatInfo"
			label="Charge to receive info"
			currency="chatScheme.chat.currency"/>

		<currency-field
			name="chargeChatPic"
			label="Charge to receive pictures"
			currency="chatScheme.chat.currency"/>

		<integer-field
			name="chargeChatPicDiv"
			label="Pictures received per charge"/>

		<currency-field
			name="chargeChatVideo"
			label="Charge to receive videos"
			currency="chatScheme.chat.currency"/>

		<integer-field
			name="chargeChatVideoDiv"
			label="Videos received per charge"/>

		<currency-field
			name="creditLimit"
			label="Credit limit"
			currency="chatScheme.chat.currency"/>

		<currency-field
			name="adultVerifyCredit"
			currency="chatScheme.chat.currency"/>

		<yes-no-field
			name="billLimitEnabled"/>

		<currency-field
			name="billLimitLow"
			currency="chatScheme.chat.currency"/>

		<currency-field
			name="billLimitHigh"
			currency="chatScheme.chat.currency"/>

		<currency-field
			name="spendWarningEvery"
			currency="chatScheme.chat.currency"
			nullable="yes"
			min="1"/>

	</field-set>

</console-module>
