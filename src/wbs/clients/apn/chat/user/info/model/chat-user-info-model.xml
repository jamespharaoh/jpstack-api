<model-meta
	name="chatUserInfo"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="chatUser"/>

		<!-- TODO index -->

		<timestamp-field
			name="creationTime"
			column-type="postgresql"
			column="timestamp"/>

		<!-- data -->

		<reference-field
			name="originalText"
			type="text"
			column="text_id"
			nullable="yes"/>

		<reference-field
			name="editedText"
			type="text"
			nullable="yes"/>

		<reference-field
			name="moderator"
			type="user"
			column="user_id"
			nullable="yes"/>

		<enum-field
			name="status"
			type="chatUserInfoStatus"/>

		<timestamp-field
			name="moderationTime"
			column-type="postgresql"
			nullable="yes"/>

		<integer-field
			name="threadId"
			nullable="yes"/>

		<enum-field
			name="editReason"
			type="chatUserEditReason"
			nullable="yes"/>

	</fields>

</model-meta>