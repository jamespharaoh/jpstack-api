<plugin
	name="chat-broadcast"
	package="wbs.clients.apn.chat.broadcast">

	<sql-scripts>
		<sql-schema name="chat-broadcast"/>
	</sql-scripts>

	<models>
		<enum-type name="chatBroadcastNumberState"/>
		<enum-type name="chatBroadcastState"/>
		<model name="chatBroadcast"/>
		<model name="chatBroadcastNumber"/>
	</models>

	<layer name="daemon">
		<component class="daemon.ChatBroadcastScheduleDaemon"/>
		<component class="daemon.ChatBroadcastSendDaemon"/>
	</layer>

	<layer name="console">
		<component class="console.ChatBroadcastListPart"/>
		<component class="console.ChatBroadcastSendAction"/>
		<component class="console.ChatBroadcastSendPart"/>
		<component class="console.ChatBroadcastVerifyPart"/>
	</layer>

	<layer name="logic">
		<component class="logic.ChatBroadcastLogicImplementation"/>
		<component class="logic.ChatBroadcastSendHelper"/>
	</layer>

	<console-modules>
		<console-module name="chat-broadcast"/>
	</console-modules>

</plugin>
