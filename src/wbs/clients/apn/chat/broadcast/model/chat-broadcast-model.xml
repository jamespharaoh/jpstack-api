<model-meta
	name="chatBroadcast"
	type="event">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="chat"/>

		<!-- TODO index -->

		<!-- timings -->

		<timestamp-field
			name="createdTime"
			column-type="iso"/>

		<timestamp-field
			name="scheduledTime"
			column-type="iso"
			nullable="yes"/>

		<timestamp-field
			name="sentTime"
			column-type="iso"
			nullable="yes"/>

		<timestamp-field
			name="cancelledTime"
			column-type="iso"
			nullable="yes"/>

		<!-- data -->

		<reference-field
			type="chatUser"/>

		<reference-field
			type="text"/>

		<!-- users -->

		<reference-field
			name="createdUser"
			type="user"/>

		<reference-field
			name="sentUser"
			type="user"
			nullable="yes"/>

		<reference-field
			name="cancelledUser"
			type="user"
			nullable="yes"/>

		<!-- state -->

		<enum-field
			name="state"
			type="chatBroadcastState"
			default="unsent"/>

		<!-- statistics -->

		<integer-field
			name="numRemoved"
			default="0"/>

		<integer-field
			name="numAccepted"
			default="0"/>

		<integer-field
			name="numRejected"
			default="0"/>

		<integer-field
			name="numSent"
			default="0"/>

		<!-- search -->

		<yes-no-field
			name="search"/>

		<timestamp-field
			name="searchLastActionFrom"
			column-type="postgresql"
			nullable="yes"/>

		<timestamp-field
			name="searchLastActionTo"
			column-type="postgresql"
			nullable="yes"/>

		<enum-field
			name="searchGender"
			type="gender"
			nullable="yes"/>

		<enum-field
			name="searchOrient"
			type="orient"
			nullable="yes"/>

		<yes-no-field
			name="searchPicture"
			nullable="yes"/>

		<yes-no-field
			name="searchAdult"
			nullable="yes"/>

		<integer-field
			name="searchSpendMin"
			nullable="yes"/>

		<integer-field
			name="searchSpendMax"
			nullable="yes"/>

		<yes-no-field
			name="includeBlocked"/>

		<yes-no-field
			name="includeOptedOut"/>

	</fields>

	<event-types>

		<event-type
			name="Chat broadcast send completed"
			text="%0 completed sending"/>

	</event-types>

</model-meta>
