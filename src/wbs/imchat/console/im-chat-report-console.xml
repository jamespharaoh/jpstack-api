<console-module
	name="im-chat-report">

	<simple-context
		name="imChatReport">

		<object-search-page
			name="operator"
			tab-label="Operators"
			object-type="imChatMessage"
			search-class="wbs.imchat.model.ImChatMessageSearch"
			search-form="operator-report-search"
			search-dao-method="searchOperatorReportIds"
			results-class="wbs.imchat.model.ImChatOperatorReport"
			results-form="operator-report-results"
			results-dao-method="findOperatorReports"/>

	</simple-context>

	<forms>

		<form
			name="operator-report-search"
			class="wbs.imchat.model.ImChatMessageSearch"
			type="search">

			<columns>

				<interval-field
					name="timestamp"
					label="Time range"/>

			</columns>

		</form>

		<form
			name="operator-report-results"
			class="wbs.imchat.model.ImChatOperatorReport"
			type="read-only">

			<columns>

				<object-field
					name="user"
					object-type="user"/>

				<integer-field
					name="numFreeMessages"
					label="Free"/>

				<integer-field
					name="numBilledMessages"
					label="Billed"/>

			</columns>

		</form>

	</forms>

</console-module>
