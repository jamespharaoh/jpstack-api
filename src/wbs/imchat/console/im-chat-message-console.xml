<console-module
	name="im-chat-message">

	<console-helper-provider
		object-name="imChatMessage"
		view-priv="greatgrandparent:manage">

		<context-stuff
			name="imChatMessageId"
			field="id"/>

		<context-stuff
			name="imChatMessageName"
			field="id"/>

		<context-stuff
			name="imChatConversationId"
			field="imChatConversation.id"/>

		<run-post-processor
			name="imChatConversation"/>

	</console-helper-provider>

	<object-context
		name="imChatMessage"
		object-name="imChatMessage">

		<list>

			<object-list-page
				form="list"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="im-chat-message"
			type="read-only">

			<columns>

				<timestamp-field
					name="timestamp"/>

				<object-field
					name="senderUser"
					label="Sender"
					object-type="user"/>

				<currency-field
					name="price"
					currency="imChatConversation.imChatCustomer.imChat.creditCurrency"/>

				<text-field
					name="messageText"
					label="Message"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="im-chat-message"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<index-field/>

				<timestamp-field
					name="timestamp"/>

				<object-field
					name="senderUser"
					object-type="user"/>

				<currency-field
					name="price"
					currency="imChatConversation.imChatCustomer.imChat.creditCurrency"/>

				<text-field
					name="messageText"
					nullable="yes"/>

			</columns>

		</form>

	</forms>

</console-module>