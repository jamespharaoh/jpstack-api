<console-module
	name="im-chat-message">

	<console-helper-provider
		object-name="imChatMessage"
		view-priv="greatgrandparent:manage">

		<context-stuff
			name="imChatMessageId"
			field="id"/>

		<context-stuff
			name="imChatMessageName"
			field="id"/>

		<context-stuff
			name="imChatConversationId"
			delegate="imChatConversation"
			field="id"/>

		<run-post-processor
			name="imChatConversation"/>

	</console-helper-provider>

	<object-context
		name="imChatMessage"
		object-name="imChatMessage">

		<list>

			<object-list-page
				fields="list"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="imChatMessage">

		<timestamp-field
			name="timestamp"/>

		<object-field
			name="senderUser"
			label="Sender"
			object-type="user"/>

		<currency-field
			name="price"
			currency="imChatConversation.imChatCustomer.imChat.creditCurrency"/>

		<text-field
			name="messageText"
			label="Message"/>

	</field-set>

	<field-set
		name="summary"
		object-name="imChatMessage">

		<id-field/>
		<parent-field/>
		<index-field/>

		<timestamp-field
			name="timestamp"/>

		<object-field
			name="senderUser"
			object-type="user"/>

		<currency-field
			name="price"
			currency="imChatConversation.imChatCustomer.imChat.creditCurrency"/>

		<text-field
			name="messageText"
			nullable="yes"/>


	</field-set>

</console-module>