<console-module
	name="im-chat-session">

	<console-helper-provider
		object-name="imChatSession"
		view-priv="grandparent:manage">

		<priv-key
			name="imChatSession.manage"
			priv="imChatCustomer.imChat:manage"/>

		<context-stuff
			name="imChatSessionName"
			field="secret"/>

		<context-stuff
			name="imChatCustomerId"
			field="imChatCustomer.id"/>

		<run-post-processor
			name="imChatCustomer"/>

	</console-helper-provider>

	<object-context
		name="imChatSession"
		object-name="imChatSession">

		<list>

			<object-list-page
				form="list"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="im-chat-session"
			type="read-only">

			<columns>

				<code-field/>

				<timestamp-field
					name="startTime"
					label="Start"/>

				<timestamp-field
					name="updateTime"
					label="Update"/>

				<timestamp-field
					name="endTime"
					label="End"/>

				<yes-no-field
					name="active"/>

				<text-field
					name="userAgentText"
					label="User agent"/>

				<text-field
					name="ipAddress"
					label="IP address"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="im-chat-session"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>

				<timestamp-field
					name="startTime"
					label="Start"/>

				<timestamp-field
					name="updateTime"
					label="Update"/>

				<timestamp-field
					name="endTime"
					label="End"/>

				<yes-no-field
					name="active"/>

				<text-field
					name="userAgentText"
					label="User agent"/>

				<text-field
					name="ipAddress"
					label="IP address"/>

			</columns>

		</form>

	</forms>

</console-module>
