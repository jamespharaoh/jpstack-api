<console-module
	name="im-chat-profile">

	<console-helper-provider
		object-name="imChatProfile"
		view-priv="imChat:manage">

		<priv-key
			name="imChatProfile.manage"
			priv="imChat:manage"/>

		<context-stuff
			name="imChatProfileName"
			field="code"/>

		<context-stuff
			name="imChatId"
			field="imChat.id"/>

		<run-post-processor
			name="imChat"/>

	</console-helper-provider>

	<object-context
		name="imChatProfile"
		object-name="imChatProfile">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="im-chat-profile"
			type="read-only">

			<columns>

				<name-field/>
				<description-field/>

				<text-field
					name="publicName"/>

				<image-field
					name="profileImage"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="im-chat-profile"
			type="create">

			<columns>

				<name-field/>
				<description-field/>

				<enum-field
					name="state"/>

				<text-field
					name="publicName"
					nullable="yes"/>

				<text-area-field
					name="publicDescription"
					nullable="yes"/>

				<text-area-field
					name="publicDescriptionShort"
					nullable="yes"/>

				<image-field
					name="profileImage"
					nullable="yes"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="im-chat-profile"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<enum-field
					name="state"/>

				<text-field
					name="publicName"/>

				<text-area-field
					name="publicDescription"/>

				<text-area-field
					name="publicDescriptionShort"/>

				<image-field
					name="profileImage"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="im-chat-profile"
			type="update">

			<columns>

				<name-field/>
				<description-field/>
				<deleted-field/>

				<enum-field
					name="state"/>

				<text-field
					name="publicName"
					nullable="yes"/>

				<text-area-field
					name="publicDescription"
					nullable="yes"/>

				<text-area-field
					name="publicDescriptionShort"
					nullable="yes"/>

				<image-field
					name="profileImage"
					nullable="yes"/>

			</columns>

		</form>

	</forms>

</console-module>
