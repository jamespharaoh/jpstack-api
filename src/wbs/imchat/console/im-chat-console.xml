<console-module
	name="im-chat">

	<console-helper-provider
		object-name="imChat">

		<context-stuff
			name="imChatName"
			field="name"/>

		<context-stuff
			name="sliceId"
			field="slice.id"/>

		<priv-key
			name="imChat.manage"
			priv="manage"/>

		<priv-key
			name="imChat.supervisor"
			priv="supervisor"/>

		<run-post-processor
			name="slice"/>

	</console-helper-provider>

	<object-context
		name="imChat"
		object-name="imChat">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"
				target-responder="imChatSettingsGeneralResponder"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<section
				name="settings"
				label="Settings">

				<object-settings-page
					form="settings"
					short-name="general"/>

				<context-link
					name="template"
					link="imChatTemplate"
					label="Templates"
					priv-key="imChat.manage"/>

				<context-link
					name="pricePoint"
					link="imChatPricePoint"
					label="Price Points"
					priv-key="imChat.manage"/>

				<context-link
					name="profile"
					link="imChatProfile"
					label="Profiles"
					priv-key="imChat.manage"/>

				<context-link
					name="customerDetailType"
					link="imChatCustomerDetailType"
					label="Customer detail types"
					priv-key="imChat.manage"/>

				<object-privs-page/>

			</section>

			<section
				name="admin"
				label="Admin">

				<context-link
					name="customer"
					link="imChatCustomer"
					label="Customers"
					priv-key="imChat.supervisor"/>

				<context-link
					name="conversation"
					link="imChatConversation"
					label="Conversations"
					priv-key="imChat.supervisor"/>

				<context-link
					name="purchase"
					link="imChatPurchase"
					label="Purchases"
					priv-key="imChat.supervisor"/>

			</section>

			<context-link
				name="report"
				link="imChatReport"
				label="Reports"
				priv-key="imChat.supervisor"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="im-chat"
			type="read-only">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="create"
			object-type="im-chat"
			type="create">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="im-chat"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<object-field
					name="billingCurrency"
					object-type="currency"/>

				<object-field
					name="creditCurrency"
					object-type="currency"/>

				<object-field
					name="messageTemplateDatabase"
					object-type="messageTemplateDatabase"
					nullable="yes"/>

				<seconds-field
					name="preferredQueueTime"/>

				<object-field
					name="paypalAccount"
					object-type="paypalAccount"/>

				<currency-field
					name="messageCost"
					currency="creditCurrency"/>

				<integer-field
					name="freeMessageLimit"/>

				<yes-no-field
					name="billMessageEnabled"/>

				<integer-field
					name="billMessageMinChars"/>

				<integer-field
					name="billMessageMaxChars"/>

				<yes-no-field
					name="freeMessageEnabled"/>

				<integer-field
					name="freeMessageMinChars"/>

				<integer-field
					name="freeMessageMaxChars"/>

				<text-field
					name="emailFromName"/>

				<text-field
					name="emailFromAddress"/>

				<text-field
					name="emailReplyToAddress"/>

				<text-field
					name="emailSubjectForgotPassword"/>

				<yes-no-field
					name="profilePageBeforeLogin"/>

				<yes-no-field
					name="detailsPageOnFirstLogin"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="im-chat"
			type="update">

			<columns>

				<parent-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<object-field
					name="billingCurrency"
					object-type="currency"
					nullable="yes"/>

				<object-field
					name="creditCurrency"
					object-type="currency"
					nullable="yes"/>

				<object-field
					name="messageTemplateDatabase"
					object-type="messageTemplateDatabase"
					nullable="yes"/>

				<seconds-field
					name="preferredQueueTime"
					nullable="yes"/>

				<object-field
					name="paypalAccount"
					object-type="paypalAccount"
					nullable="yes"/>

				<currency-field
					name="messageCost"
					currency="creditCurrency"
					nullable="yes"/>

				<integer-field
					name="freeMessageLimit"
					nullable="yes"/>

				<yes-no-field
					name="billMessageEnabled"
					nullable="yes"/>

				<integer-field
					name="billMessageMinChars"
					nullable="yes"/>

				<integer-field
					name="billMessageMaxChars"
					nullable="yes"/>

				<yes-no-field
					name="freeMessageEnabled"
					nullable="yes"/>

				<integer-field
					name="freeMessageMinChars"
					nullable="yes"/>

				<integer-field
					name="freeMessageMaxChars"
					nullable="yes"/>

				<text-field
					name="emailFromName"
					nullable="yes"/>

				<text-field
					name="emailFromAddress"
					nullable="yes"/>

				<text-field
					name="emailReplyToAddress"
					nullable="yes"/>

				<text-field
					name="emailSubjectForgotPassword"
					nullable="yes"/>

				<yes-no-field
					name="profilePageBeforeLogin"
					nullable="yes"/>

				<yes-no-field
					name="detailsPageOnFirstLogin"
					nullable="yes"/>

			</columns>

		</form>

	</forms>

</console-module>
