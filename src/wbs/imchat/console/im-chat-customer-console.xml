<console-module
	name="im-chat-customer">

	<console-helper-provider
		object-name="imChatCustomer"
		view-priv="imChat:supervisor">

		<context-stuff
			name="imChatCustomerName"
			field="code"/>

		<context-stuff
			name="imChatId"
			field="imChat.id"/>

		<run-post-processor
			name="imChat"/>

		<priv-key
			name="imChatCustomer.manage"
			priv="imChat:manage"/>

		<priv-key
			name="imChatCustomer.supervisor"
			priv="imChat:supervisor"/>

	</console-helper-provider>

	<object-context
		name="imChatCustomer"
		object-name="imChatCustomer">

		<list>

			<object-search-page
				search-class="wbs.imchat.model.ImChatCustomerSearch"
				search-form="search"
				results-form="results"
				priv-key="imChat.manage"
				parent-id-key="imChatId"
				parent-id-name="imChatId"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<section
				name="settings"
				label="Settings">

				<object-settings-page
					form="settings"
					short-name="general"/>

				<context-tab-action-page
					name="password"
					priv-key="imChatCustomer.supervisor"/>

			</section>

			<context-tab-action-page
				name="credit"
				priv-key="imChatCustomer.supervisor"/>

			<context-link
				name="conversation"
				link="imChatConversation"
				label="Conversations"
				priv-key="imChatCustomer.supervisor"/>

			<context-link
				name="session"
				link="imChatSession"
				label="Sessions"
				priv-key="imChatSession.supervisor"/>

			<context-link
				name="purchase"
				link="imChatPurchase"
				label="Purchases"
				priv-key="imChatPurchase.supervisor"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="search"
			class="wbs.imchat.model.ImChatCustomerSearch"
			type="search">

			<columns>

				<text-field
					name="code"
					nullable="yes"/>

				<text-field
					name="email"
					nullable="yes"/>

				<interval-field
					name="firstSession"
					nullable="yes"/>

				<interval-field
					name="lastSession"
					nullable="yes"/>

				<enum-field
					name="order"/>

			</columns>

		</form>

		<form
			name="results"
			object-type="im-chat-customer"
			type="read-only">

			<columns>

				<code-field/>

				<text-field
					name="email"/>

				<integer-field
					name="numConversations"
					label="Convs"/>

				<integer-field
					name="numPurchases"
					label="Purchs"/>

				<currency-field
					name="balance"
					currency="imChat.creditCurrency"/>

				<currency-field
					name="totalSpend"
					label="Spend"
					currency="imChat.creditCurrency"/>

				<currency-field
					name="totalPurchasePrice"
					label="Purchase"
					currency="imChat.billingCurrency"/>

				<timestamp-field
					name="lastSession"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="im-chat-customer"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>

				<text-field
					name="email"
					view-priv="imChat:supervisor"/>

				<integer-field
					name="numConversations"/>

				<integer-field
					name="numPurchases"/>

				<currency-field
					name="balance"
					currency="imChat.creditCurrency"/>

				<text-area-field
					name="notesText"
					label="Notes"/>

				<yes-no-field
					name="developerMode"/>

			</columns>

		</form>

		<form
			name="credit-action"
			class="wbs.imchat.console.ImChatCustomerCreditRequest"
			type="perform">

			<columns>

				<currency-field
					name="creditAmount"
					currency="customer.imChat.creditCurrency"/>

				<currency-field
					name="billAmount"
					currency="customer.imChat.billingCurrency"/>

				<text-field
					name="reason"/>

			</columns>

		</form>

		<form
			name="credit-customer"
			object-type="im-chat-customer"
			type="read-only">

			<columns>

				<code-field/>

				<integer-field
					name="numConversations"/>

				<integer-field
					name="numPurchases"/>

				<integer-field
					name="numCredits"/>

				<currency-field
					name="balance"
					currency="imChat.creditCurrency"/>

			</columns>

		</form>

		<form
			name="credit-history"
			object-type="im-chat-customer-credit"
			type="read-only">

			<columns>

				<timestamp-field
					name="timestamp"/>

				<object-field
					name="user"
					object-type="user"/>

				<text-field
					name="reason"/>

				<currency-field
					name="creditAmount"
					label="Credit"
					currency="imChatCustomer.imChat.creditCurrency"/>

				<currency-field
					name="creditBalanceAfter"
					label="Balance"
					currency="imChatCustomer.imChat.creditCurrency"/>

				<currency-field
					name="billAmount"
					label="Bill"
					currency="imChatCustomer.imChat.billingCurrency"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="im-chat-customer"
			type="update">

			<columns>

				<text-area-field
					name="notesText"
					label="Notes"/>

				<yes-no-field
					name="developerMode"/>

			</columns>

		</form>

	</forms>

</console-module>