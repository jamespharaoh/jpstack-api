<console-module
	name="im-chat-conversation">

	<console-helper-provider
		object-name="imChatConversation"
		view-priv="grandparent:supervisor">

		<priv-key
			name="imChatConversation.manage"
			priv="imChatCustomer.imChat:manage"/>

		<context-stuff
			name="imChatConversationName"
			field="index"/>

		<context-stuff
			name="imChatCustomerId"
			field="imChatCustomer.id"/>

		<run-post-processor
			name="imChatCustomer"/>

	</console-helper-provider>

	<object-context
		name="imChatConversation"
		object-name="imChatConversation">

		<list>

			<object-list-page
				form="list"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<context-link
				name="message"
				link="imChatMessage"
				label="Messages"
				priv-key="imChatConversation.manage"/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="im-chat-conversation"
			type="read-only">

			<columns>

				<object-field
					name="imChatProfile"
					label="Profile"
					object-type="imChatProfile"
					root-field="imChatCustomer.imChat"/>

				<integer-field
					name="numMessages"
					label="Messages"/>

				<timestamp-field
					name="startTime"/>

				<timestamp-field
					name="endTime"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="im-chat-conversation"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<index-field/>

				<object-field
					name="imChatProfile"
					label="Profile"
					object-type="imChatProfile"
					root-field="imChatCustomer.imChat"/>

				<integer-field
					name="numMessages"/>

				<timestamp-field
					name="startTime"/>

				<timestamp-field
					name="endTime"/>

			</columns>

		</form>

	</forms>

</console-module>