<console-module
	name="im-chat-template">

	<console-helper-provider
		object-name="imChatTemplate"
		view-priv="imChat:manage">

		<context-stuff
			name="imChatTemplateName"
			field="name"/>

		<context-stuff
			name="imChatId"
			field="imChat.id"/>

		<priv-key
			name="imChatTemplate.manage"
			priv="imChat:manage"/>

		<run-post-processor
			name="imChat"/>

	</console-helper-provider>

	<object-context
		name="imChatTemplate"
		object-name="imChatTemplate">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="im-chat-template"
			type="read-only">

			<columns>

				<name-field/>
				<description-field/>

				<text-field
					name="text"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="im-chat-template"
			type="create">

			<columns>

				<name-field/>
				<description-field/>

				<text-field
					name="text"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="im-chat-template"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<text-area-field
					name="text"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="im-chat-template"
			type="update">

			<columns>

				<id-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<text-area-field
					name="text"/>

			</columns>

		</form>

	</forms>

</console-module>