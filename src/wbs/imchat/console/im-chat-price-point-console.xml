<console-module
	name="im-chat-price-point">

	<console-helper-provider
		object-name="imChatPricePoint"
		view-priv="imChat:manage">

		<priv-key
			name="imChatPricePoint.manage"
			priv="imChat:manage"/>

		<context-stuff
			name="imChatPricePointName"
			field="code"/>

		<context-stuff
			name="imChatId"
			field="imChat.id"/>

		<run-post-processor
			name="imChat"/>

	</console-helper-provider>

	<object-context
		name="imChatPricePoint"
		object-name="imChatPricePoint">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="im-chat-price-point"
			type="read-only">

			<columns>

				<name-field/>
				<description-field/>

				<currency-field
					name="price"
					currency="imChat.billingCurrency"/>

				<currency-field
					name="value"
					currency="imChat.creditCurrency"/>

				<integer-field
					name="order"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="im-chat-price-point"
			type="create">

			<columns>

				<name-field/>
				<description-field/>

				<text-field
					name="publicName"/>

				<text-field
					name="publicDescription"/>

				<currency-field
					name="price"
					currency="imChat.billingCurrency"/>

				<currency-field
					name="value"
					currency="imChat.creditCurrency"/>

				<integer-field
					name="order"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="im-chat-price-point"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<text-field
					name="publicName"/>

				<text-field
					name="publicDescription"/>

				<currency-field
					name="price"
					currency="imChat.billingCurrency"/>

				<currency-field
					name="value"
					currency="imChat.creditCurrency"/>

				<integer-field
					name="order"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="im-chat-price-point"
			type="update">

			<columns>

				<name-field/>
				<description-field/>
				<deleted-field/>

				<text-field
					name="publicName"/>

				<text-field
					name="publicDescription"/>

				<currency-field
					name="price"
					currency="imChat.billingCurrency"/>

				<currency-field
					name="value"
					currency="imChat.creditCurrency"/>

				<integer-field
					name="order"/>

			</columns>

		</form>

	</forms>

</console-module>
