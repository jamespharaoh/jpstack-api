<console-module
	name="im-chat-customer-detail-type">

	<console-helper-provider
		object-name="imChatCustomerDetailType"
		view-priv="imChat:manage">

		<priv-key
			name="imChatCustomerDetailType.manage"
			priv="imChat:manage"/>

		<context-stuff
			name="imChatCustomerDetailTypeName"
			field="name"/>

		<context-stuff
			name="imChatId"
			field="imChat.id"/>

		<run-post-processor
			name="imChat"/>

	</console-helper-provider>

	<object-context
		name="imChatCustomerDetailType"
		object-name="imChatCustomerDetailType">

		<list>

			<object-list-page
				form="list"/>

			<object-create-page
				form="create"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

			<object-settings-page
				form="settings"/>

			<object-events-page/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="im-chat-customer-detail-type"
			type="read-only">

			<columns>

				<name-field/>
				<description-field/>

				<yes-no-field
					name="required"/>

				<yes-no-field
					name="restricted"/>

				<yes-no-field
					name="whenCreatingAccount"
					label="Create"/>

				<enum-field
					name="dataType"/>

				<integer-field
					name="minimumAge"/>

				<integer-field
					name="ordering"/>

			</columns>

		</form>

		<form
			name="create"
			object-type="im-chat-customer-detail-type"
			type="create">

			<columns>

				<name-field/>
				<description-field/>

				<text-field
					name="label"/>

				<text-field
					name="help"/>

				<yes-no-field
					name="required"/>

				<text-field
					name="requiredLabel"/>

				<yes-no-field
					name="restricted"/>

				<yes-no-field
					name="whenCreatingAccount"/>

				<enum-field
					name="dataType"/>

				<integer-field
					name="minimumAge"
					nullable="yes"/>

				<integer-field
					name="ordering"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="im-chat-customer-detail-type"
			type="read-only">

			<columns>

				<id-field/>
				<parent-field/>
				<code-field/>
				<name-field/>
				<description-field/>
				<deleted-field/>

				<text-field
					name="label"/>

				<text-field
					name="help"/>

				<yes-no-field
					name="required"/>

				<text-field
					name="requiredLabel"/>

				<yes-no-field
					name="restricted"/>

				<yes-no-field
					name="whenCreatingAccount"/>

				<enum-field
					name="dataType"/>

				<integer-field
					name="minimumAge"/>

				<integer-field
					name="ordering"/>

				<text-field
					name="requiredErrorTitle"/>

				<text-area-field
					name="requiredErrorMessage"/>

				<text-field
					name="invalidErrorTitle"/>

				<text-area-field
					name="invalidErrorMessage"/>

				<text-field
					name="ageErrorTitle"/>

				<text-area-field
					name="ageErrorMessage"/>

			</columns>

		</form>

		<form
			name="settings"
			object-type="im-chat-customer-detail-type"
			type="update">

			<columns>

				<name-field/>
				<description-field/>
				<deleted-field/>

				<text-field
					name="label"/>

				<text-field
					name="help"/>

				<yes-no-field
					name="required"/>

				<text-field
					name="requiredLabel"/>

				<yes-no-field
					name="restricted"/>

				<yes-no-field
					name="whenCreatingAccount"/>

				<enum-field
					name="dataType"/>

				<integer-field
					name="minimumAge"
					nullable="yes"/>

				<integer-field
					name="ordering"/>

				<text-field
					name="requiredErrorTitle"
					nullable="yes"/>

				<text-area-field
					name="requiredErrorMessage"
					nullable="yes"/>

				<text-field
					name="invalidErrorTitle"
					nullable="yes"/>

				<text-area-field
					name="invalidErrorMessage"
					nullable="yes"/>

				<text-field
					name="ageErrorTitle"
					nullable="yes"/>

				<text-area-field
					name="ageErrorMessage"
					nullable="yes"/>

			</columns>

		</form>

	</forms>

</console-module>
