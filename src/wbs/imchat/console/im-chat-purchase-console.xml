<console-module
	name="im-chat-purchase">

	<console-helper-provider
		object-name="imChatPurchase"
		view-priv="grandparent:manage">

		<priv-key
			name="imChatPurchase.manage"
			priv="imChatCustomer.imChat:manage"/>

		<context-stuff
			name="imChatPurchaseName"
			field="index"/>

		<context-stuff
			name="imChatCustomerId"
			field="imChatCustomer.id"/>

		<run-post-processor
			name="imChatCustomer"/>

	</console-helper-provider>

	<object-context
		name="imChatPurchase"
		object-name="imChatPurchase">

		<list>

			<object-list-page
				fields="list"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="imChatPurchase">

		<index-field/>

		<object-field
			name="imChatPricePoint"
			label="Price point"
			object-type="imChatPricePoint"
			root-field="imChatCustomer.imChat"/>

		<currency-field
			name="price"
			currency="imChatCustomer.imChat.billingCurrency"/>

		<currency-field
			name="value"
			currency="imChatCustomer.imChat.creditCurrency"/>

		<enum-field
			name="state"/>

		<timestamp-field
			name="createdTime"
			label="Created"/>

		<timestamp-field
			name="completedTime"
			label="Completed"/>

		<timestamp-field
			name="cancelledTime"
			label="Cancelled"/>

	</field-set>

	<field-set
		name="summary"
		object-name="imChatPurchase">

		<id-field/>

		<parent-field/>

		<index-field/>

		<object-field
			name="imChatPricePoint"
			label="Price point"
			object-type="imChatPricePoint"
			root-field="imChatCustomer.imChat"/>

		<currency-field
			name="price"
			currency="imChatCustomer.imChat.billingCurrency"/>

		<currency-field
			name="value"
			currency="imChatCustomer.imChat.creditCurrency"/>

		<enum-field
			name="state"/>

		<timestamp-field
			name="createdTime"/>

		<timestamp-field
			name="completedTime"/>

		<timestamp-field
			name="cancelledTime"/>

		<object-field
			name="paypalPayment"
			object-type="paypalPayment"/>

		<yes-no-field
			name="developerMode"/>

	</field-set>

</console-module>
