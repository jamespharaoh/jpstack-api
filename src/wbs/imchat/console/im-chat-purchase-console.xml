<console-module
	name="im-chat-purchase">

	<console-helper-provider
		object-name="imChatPurchase"
		view-priv="grandparent:manage">

		<priv-key
			name="imChatPurchase.manage"
			priv="imChatCustomer.imChat:manage"/>

		<context-stuff
			name="imChatPurchaseName"
			field="index"/>

		<context-stuff
			name="imChatCustomerId"
			field="imChatCustomer.id"/>

		<run-post-processor
			name="imChatCustomer"/>

	</console-helper-provider>

	<object-context
		name="imChatPurchase"
		object-name="imChatPurchase">

		<list>

			<object-list-page
				form="list"/>

		</list>

		<object>

			<object-summary-page
				form="summary"/>

		</object>

	</object-context>

	<forms>

		<form
			name="list"
			object-type="im-chat-purchase"
			type="read-only">

			<columns>

				<index-field/>

				<object-field
					name="imChatPricePoint"
					label="Price point"
					object-type="imChatPricePoint"
					root-field="imChatCustomer.imChat"/>

				<currency-field
					name="price"
					currency="imChatCustomer.imChat.billingCurrency"/>

				<currency-field
					name="value"
					currency="imChatCustomer.imChat.creditCurrency"/>

				<enum-field
					name="state"/>

				<timestamp-field
					name="createdTime"
					label="Created"/>

				<timestamp-field
					name="completedTime"
					label="Completed"/>

				<timestamp-field
					name="cancelledTime"
					label="Cancelled"/>

			</columns>

		</form>

		<form
			name="summary"
			object-type="im-chat-purchase"
			type="read-only">

			<columns>

				<id-field/>

				<parent-field/>

				<index-field/>

				<object-field
					name="imChatPricePoint"
					label="Price point"
					object-type="imChatPricePoint"
					root-field="imChatCustomer.imChat"/>

				<currency-field
					name="price"
					currency="imChatCustomer.imChat.billingCurrency"/>

				<currency-field
					name="value"
					currency="imChatCustomer.imChat.creditCurrency"/>

				<enum-field
					name="state"/>

				<timestamp-field
					name="createdTime"/>

				<timestamp-field
					name="completedTime"/>

				<timestamp-field
					name="cancelledTime"/>

				<object-field
					name="paypalPayment"
					object-type="paypalPayment"/>

				<yes-no-field
					name="developerMode"/>

			</columns>

		</form>

	</forms>

</console-module>
