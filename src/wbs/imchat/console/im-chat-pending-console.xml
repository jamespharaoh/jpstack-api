<console-module
	name="im-chat-pending">

	<object-context
		name="imChat.pending"
		bean-name="imChatPending"
		object-name="imChatMessage">

		<object>

			<context-tab-responder-page
				name="summary"/>

			<context-action-page
				name="form"/>

			<context-action
				name="customerNoteUpdate"/>

		</object>

	</object-context>

	<forms>

		<form
			name="summary-customer"
			object-type="im-chat-customer"
			type="read-only">

			<column-fields>

				<object-field
					name="imChat"
					object-type="imChat"/>

				<object-field
					name="customer"
					object-type="imChatCustomer"
					field="this"
					root-field="imChat"/>

				<integer-field
					name="numConversations"/>

				<currency-field
					name="balance"
					currency="imChat.creditCurrency"/>

			</column-fields>

		</form>

		<form
			name="summary-profile"
			object-type="im-chat-profile"
			type="read-only">

			<column-fields>

				<object-field
					name="profile"
					object-type="imChatProfile"
					field="this"
					root-field="imChat"/>

				<text-field
					name="publicName"
					label="Name"/>

				<text-field
					name="publicDescription"
					label="Description"/>

				<image-field
					name="profileImage"
					show-filename="no"/>

			</column-fields>

		</form>

		<form
			name="summary-message"
			object-type="im-chat-message"
			type="read-only">

			<column-fields>

				<object-field
					name="senderUser"
					label="User"
					object-type="user"/>

				<text-field
					name="messageText"
					label="Message"/>

				<timestamp-field
					name="timestamp"/>

				<currency-field
					name="price"
					currency="imChatConversation.imChatCustomer.imChat.creditCurrency"/>

			</column-fields>

		</form>

	</forms>

</console-module>
