<console-module
	name="im-chat-pending">

	<object-context
		name="imChat.pending"
		bean-name="imChatPending"
		object-name="imChatMessage">

		<object>

			<context-tab-responder-page
				name="summary"/>

			<context-action-page
				name="form"/>

			<context-action
				name="customerNoteUpdate"/>

		</object>

	</object-context>

	<field-set
		name="customerFields"
		object-name="imChatCustomer">

		<object-field
			name="imChat"
			object-type="imChat"/>

		<object-field
			name="customer"
			object-type="imChatCustomer"
			field="this"
			root-field="imChat"/>

		<integer-field
			name="numConversations"/>

		<currency-field
			name="balance"
			currency="imChat.creditCurrency"/>

	</field-set>

	<field-set
		name="profileFields"
		object-name="imChatProfile">

		<object-field
			name="profile"
			object-type="imChatProfile"
			field="this"
			root-field="imChat"/>

		<text-field
			name="publicName"
			label="Name"/>

		<text-field
			name="publicDescription"
			label="Description"/>

		<image-field
			name="profileImage"
			show-filename="no"/>

	</field-set>

	<field-set
		name="messageFields"
		object-name="imChatMessage">

		<object-field
			name="senderUser"
			label="User"
			object-type="user"/>

		<text-field
			name="messageText"
			label="Message"/>

		<timestamp-field
			name="timestamp"/>

		<currency-field
			name="price"
			currency="imChatConversation.imChatCustomer.imChat.creditCurrency"/>

	</field-set>

</console-module>
