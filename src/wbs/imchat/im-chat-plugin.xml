<plugin
	name="im-chat"
	package="wbs.imchat">

	<plugin-dependencies>
		<plugin-dependency name="paypal"/>
		<plugin-dependency name="platform-scaffold"/>
		<plugin-dependency name="sms-apps-common"/>
	</plugin-dependencies>

	<sql-scripts>
		<sql-schema name="im-chat-core"/>
	</sql-scripts>

	<models>

		<enum-type name="imChatCustomerDetailDataType"/>
		<enum-type name="imChatProfileState"/>
		<enum-type name="imChatPurchaseState"/>

		<model name="imChat"/>
		<model name="imChatCustomer"/>
		<model name="imChatCustomerCredit"/>
		<model name="imChatCustomerDetailType"/>
		<model name="imChatCustomerDetailValue"/>
		<model name="imChatConversation"/>
		<model name="imChatEvent"/>
		<model name="imChatMessage"/>
		<model name="imChatPricePoint"/>
		<model name="imChatProfile"/>
		<model name="imChatPurchase"/>
		<model name="imChatSession"/>
		<model name="imChatTemplate"/>

	</models>

	<fixtures>
		<fixture name="imChatCore"/>
	</fixtures>

	<layer name="api">
		<component class="api.ImChatApiLogicImplementation"/>
		<component class="api.ImChatChangePasswordApiAction"/>
		<component class="api.ImChatConditionsAcceptApiAction"/>
		<component class="api.ImChatConversationEndApiAction"/>
		<component class="api.ImChatConversationStartApiAction"/>
		<component class="api.ImChatCustomerCreateApiAction"/>
		<component class="api.ImChatDetailsUpdateApiAction"/>
		<component class="api.ImChatEventPostApiAction"/>
		<component class="api.ImChatForgotPasswordApiAction"/>
		<component class="api.ImChatMediaJpegApiAction"/>
		<component class="api.ImChatMediaMiniatureJpegApiAction"/>
		<component class="api.ImChatMediaOriginalJpegApiAction"/>
		<component class="api.ImChatMediaThumbnailJpegApiAction"/>
		<component class="api.ImChatMediaResponder"/>
		<component class="api.ImChatMessageListApiAction"/>
		<component class="api.ImChatMessageSendApiAction"/>
		<component class="api.ImChatMessageTemplateSetGetApiAction"/>
		<component class="api.ImChatServiceGetApiAction"/>
		<component class="api.ImChatSessionStartApiAction"/>
		<component class="api.ImChatSessionLoadApiAction"/>
		<component class="api.ImChatSessionEndApiAction"/>
		<component class="api.ImChatPricePointListApiAction"/>
		<component class="api.ImChatProfileListApiAction"/>
		<component class="api.ImChatPurchaseStartApiAction"/>
		<component class="api.ImChatPurchaseGetConfirmationApiAction"/>
		<component class="api.ImChatPurchaseConfirmApiAction"/>
		<component class="api.ImChatPurchaseHistoryApiAction"/>
	</layer>

	<layer name="console">
		<component class="console.ImChatCustomerCreditAction"/>
		<component class="console.ImChatCustomerCreditPart"/>
		<component class="console.ImChatCustomerSearchOrderConsoleHelper"/>
		<component class="console.ImChatCustomerSettingsPasswordAction"/>
		<component class="console.ImChatCustomerSettingsPasswordPart"/>
		<component class="console.ImChatMessageConsoleHooks"/>
		<component class="console.ImChatQueueConsole"/>
		<component class="console.ImChatPendingCustomerNoteUpdateAction"/>
		<component class="console.ImChatPendingFormAction"/>
		<component class="console.ImChatPendingFormResponder"/>
		<component class="console.ImChatPendingSummaryPart"/>
	</layer>

	<layer name="daemon">
		<component class="daemon.ImChatConversationEmailDaemon"/>
	</layer>

	<layer name="logic">
		<component class="logic.ImChatLogicImplementation"/>
	</layer>

	<api-modules>
		<api-module name="im-chat"/>
	</api-modules>

	<console-modules>
		<console-module name="im-chat"/>
		<console-module name="im-chat-conversation"/>
		<console-module name="im-chat-customer"/>
		<console-module name="im-chat-customer-credit"/>
		<console-module name="im-chat-customer-detail-type"/>
		<console-module name="im-chat-customer-detail-value"/>
		<console-module name="im-chat-event"/>
		<console-module name="im-chat-message"/>
		<console-module name="im-chat-pending"/>
		<console-module name="im-chat-price-point"/>
		<console-module name="im-chat-profile"/>
		<console-module name="im-chat-purchase"/>
		<console-module name="im-chat-report"/>
		<console-module name="im-chat-session"/>
		<console-module name="im-chat-template"/>
	</console-modules>

</plugin>
