<model-meta
	name="imChatProfile"
	type="major">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="imChat"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<enum-field
			name="state"
			type="imChatProfileState"/>

		<string-field
			name="publicName"/>

		<string-field
			name="publicDescription"/>

		<string-field
			name="publicDescriptionShort"/>

		<reference-field
			name="profileImage"
			type="media"
			nullable="yes"/>

		<integer-field
			name="order"/>

	</fields>

</model-meta>