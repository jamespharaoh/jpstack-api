<model-meta
	name="imChatMessageView"
	type="event"
	create="no">

	<fields>

		<!-- id -->

		<foreign-id-field
			field="imChatMessage"/>

		<!-- identity -->

		<master-field
			type="imChatMessage"/>

		<!-- index -->

		<reference-field
			name="imChat"
			type="imChat"/>

		<reference-field
			name="senderUser"
			type="user"/>

		<timestamp-field
			name="timestamp"
			column-type="iso"/>

		<!-- data -->

		<integer-field
			name="numCharacters"/>

	</fields>

</model-meta>