<plugin
	name="im-chat-core"
	package="wbs.imchat.core">

	<plugin-dependencies>
		<plugin-dependency name="sms-apps-common"/>
		<plugin-dependency name="scaffold"/>
	</plugin-dependencies>

	<sql-scripts>
		<sql-schema name="im-chat-core"/>
		<sql-data name="im-chat-core-data"/>
	</sql-scripts>

	<models>
		<model name="imChat"/>
		<model name="imChatCustomer"/>
		<model name="imChatConversation"/>
		<model name="imChatMessage"/>
		<model name="imChatPricePoint"/>
		<model name="imChatProfile"/>
		<model name="imChatPurchase"/>
		<model name="imChatSession"/>
	</models>

	<fixtures>
		<fixture name="imChatCore"/>
	</fixtures>

	<layer name="api">
		<bean class="api.ImChatApiLogicImplementation"/>
		<bean class="api.ImChatConversationStartAction"/>
		<bean class="api.ImChatCustomerAction"/>
		<bean class="api.ImChatCustomerCreateAction"/>
		<bean class="api.ImChatMessageSendAction"/>
		<bean class="api.ImChatSessionStartAction"/>
		<bean class="api.ImChatPricePointListAction"/>
		<bean class="api.ImChatProfileListAction"/>
		<bean class="api.ImChatPurchaseMakeAction"/>
	</layer>

	<layer name="console">
		<bean class="console.ImChatQueueConsole"/>
		<bean class="console.ImChatMessageReplyAction"/>
		<bean class="console.ImChatMessageReplyResponder"/>
	</layer>

	<api-modules>
		<api-module name="im-chat"/>
	</api-modules>

	<console-modules>
		<console-module name="im-chat"/>
		<console-module name="im-chat-customer"/>
		<console-module name="im-chat-conversation"/>
		<console-module name="im-chat-message"/>
		<console-module name="im-chat-price-point"/>
		<console-module name="im-chat-profile"/>
		<console-module name="im-chat-session"/>
		<console-module name="im-chat-purchase"/>
	</console-modules>

</plugin>
