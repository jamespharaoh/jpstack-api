<console-module
	name="im-chat-conversation">

	<console-helper-provider
		object-name="imChatConversation"
		view-delegate-field="grandparent"
		view-delegate-priv-code="manage">

		<context-stuff
			name="imChatConversationId"
			field="id"/>

		<context-stuff
			name="imChatConversationName"
			field="index"/>

		<context-stuff
			name="imChatCustomerId"
			delegate="imChatCustomer"
			field="id"/>

		<run-post-processor
			name="imChatCustomer"/>

	</console-helper-provider>

	<object-context
		name="imChatConversation"
		object-name="imChatConversation">

		<list>

			<object-list-page
				fields="list"/>

		</list>

		<object>

			<object-summary-page
				fields="summary"/>

			<object-settings-page
				fields="settings"
				priv-key="imChatCustomer.imChat.manage"/>

			<context-link
				name="message"
				link="imChatMessage"
				label="Messages"
				priv-key="imChatCustomer.imChat.manage"/>

		</object>

	</object-context>

	<field-set
		name="list"
		object-name="imChatConversation">

		<parent-field/>
		<index-field/>

	</field-set>

	<field-set
		name="summary"
		object-name="imChatConversation">

		<id-field/>
		<parent-field/>
		<index-field/>

	</field-set>

	<field-set
		name="settings"
		object-name="imChatConversation">

		<id-field/>
		<index-field/>

	</field-set>

</console-module>